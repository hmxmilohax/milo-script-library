{func camtest_pick_shot
   {eval {elem $camtest.shots $camtest.shot}}
   {rnd reflect camtest {print {arena cam_msg} "\n"}}
   {set $camtest.shot {'+' $camtest.shot 1}}
   {if {>= $camtest.shot {size $camtest.shots}}
      {set $camtest.shot 0}
   }
}
{func camtest_next_shots
   {set $camtest.shots
      {if_else {== {arena venue_name} small_club_multi}
         {cond
            ({== $camtest.shots $camedit.INTRO} $camedit.MULTIPLAYER)
            ({== $camtest.shots $camedit.MULTIPLAYER} $camedit.MULTIPLAYER_0)
            ({== $camtest.shots $camedit.MULTIPLAYER_0} $camedit.MULTIPLAYER_1)
            ({== $camtest.shots $camedit.MULTIPLAYER_1} $camedit.INTRO)
         }
         {cond
            ({== $camtest.shots $camedit.INTRO} $camedit.LOSE)
            ({== $camtest.shots $camedit.LOSE} $camedit.SOLO_NEAR)
            ({== $camtest.shots $camedit.SOLO_NEAR} $camedit.SOLO_FAR)
            ({== $camtest.shots $camedit.SOLO_FAR} $camedit.WIN)
            ({== $camtest.shots $camedit.WIN} $camedit.flr_near_lft)
            ({== $camtest.shots $camedit.flr_near_lft} $camedit.flr_near_rt)
            ({== $camtest.shots $camedit.flr_near_rt} $camedit.flr_far_lft)
            ({== $camtest.shots $camedit.flr_far_lft} $camedit.flr_far_rt)
            ({== $camtest.shots $camedit.flr_far_rt} $camedit.balcony_lft)
            ({== $camtest.shots $camedit.balcony_lft} $camedit.balcony_rt)
            ({== $camtest.shots $camedit.balcony_rt} $camedit.band_POV)
            ({== $camtest.shots $camedit.band_POV} $camedit.INTRO)
         }
      }
   }
   {set $camtest.shot 0}
   {camtest_pick_shot}
}
{arena add_handlers
   (init
      {set $camtest.shots $camedit.INTRO}
      {set $camtest.shot 0}
      {arena set_fade 240}
      {camtest_pick_shot}
      {rnd show_overlay camtest TRUE}
   )
   (terminate
      {set $camtest.shots 0}
      {rnd show_overlay camtest FALSE}
      {delete camtest_pick_shot}
      {delete camtest_next_shots}
   )
}