#include band_anims.dta
#define BASS_METAL (
   (bass
      (outfit
         (directory "charsys/metal_bass")
         (category (skeleton ('' (load "metal_bass"))))
      )
      (bone.servo BASS_CHANNELS)
      (lod_screen_sizes 0.4)
      (handlers
         (my_preload {"main.drv" set_anims {$this find_or_load BASS_ANIMS}})
      )
      #merge bandbase.dta
   )
)
