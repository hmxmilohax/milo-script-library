#define CHEATS_ALLOWED (
   {&&
      {exists ui}
      {! {ui in_transition}}
      {== {ui current_screen} {ui screen main}}
   }
)
#define G_BLUE (kPad_R2)
#define G_RED (kPad_Circle)
#define G_YELLOW (kPad_Tri)
#define G_BLUE (kPad_X)
#define G_ORANGE (kPad_Square)
(
   (G_ORANGE G_ORANGE G_BLUE G_YELLOW G_ORANGE)
   {if CHEATS_ALLOWED
      {if_else {== $cheat_guitar kGuitarAir}
         {do
            {set $cheat_guitar 0}
            {{ui screen main} display_msg cheat_air_guitar_off}
            {play_sfx cheat_off}
         }
         {do
            {set $cheat_guitar kGuitarAir}
            {{ui screen main} display_msg cheat_air_guitar_on}
            {play_sfx cheat}
         }
      }
   }
)
(
   (G_BLUE G_ORANGE G_YELLOW G_BLUE G_BLUE)
   {if CHEATS_ALLOWED
      {if_else {== $cheat_guitar kGuitarRedOctane}
         {do
            {set $cheat_guitar 0}
            {{ui screen main} display_msg cheat_red_oct_guit_off}
            {play_sfx cheat_off}
         }
         {do
            {set $cheat_guitar kGuitarRedOctane}
            {{ui screen main} display_msg cheat_red_oct_guit_on}
            {play_sfx cheat}
         }
      }
   }
)
(
   (G_YELLOW G_ORANGE G_BLUE G_BLUE G_ORANGE G_YELLOW G_YELLOW)
   {if {&& CHEATS_ALLOWED {! $unlock_all}}
      {set $unlock_all 1}
      {campaign set_all_access 1}
      {set $disable_save 1}
      {{ui screen main} display_msg cheat_unlock_all_on}
      {play_sfx cheat}
   }
)
(
   (G_YELLOW G_BLUE G_ORANGE G_ORANGE G_BLUE G_BLUE G_YELLOW G_ORANGE)
   {if {&& CHEATS_ALLOWED {! $cheat_meter}}
      {set $cheat_meter 1}
      {set $disable_save 1}
      {{ui screen main} display_msg cheat_crowd_meter_on}
      {play_sfx cheat}
   }
)
(
   (G_BLUE G_YELLOW G_ORANGE G_BLUE G_YELLOW G_ORANGE)
   {if CHEATS_ALLOWED
      {if_else {! {arena showing}}
         {do
            {arena set_showing 1}
            {{ui screen main} display_msg cheat_no_venue_off}
            {play_sfx cheat_off}
         }
         {do
            {arena set_showing 0}
            {{ui screen main} display_msg cheat_no_venue_on}
            {play_sfx cheat}
         }
      }
   }
)
(
   (G_BLUE G_ORANGE G_YELLOW G_YELLOW G_YELLOW G_BLUE G_ORANGE)
   {if CHEATS_ALLOWED
      {if_else {== $cheat_crowd 1}
         {do
            {set $cheat_crowd 0}
            {{ui screen main} display_msg cheat_crowd1_off}
            {play_sfx cheat_off}
         }
         {do
            {set $cheat_crowd 1}
            {{ui screen main} display_msg cheat_crowd1_on}
            {play_sfx cheat}
         }
      }
   }
)
(
   (G_ORANGE G_YELLOW G_BLUE G_BLUE G_ORANGE G_YELLOW G_BLUE G_BLUE)
   {if CHEATS_ALLOWED
      {if_else {== $cheat_crowd 2}
         {do
            {set $cheat_crowd 0}
            {{ui screen main} display_msg cheat_crowd2_off}
            {play_sfx cheat_off}
         }
         {do
            {set $cheat_crowd 2}
            {{ui screen main} display_msg cheat_crowd2_on}
            {play_sfx cheat}
         }
      }
   }
)