#define HERO_GRAPH
((blend_width 1)
   (play_flags kAnimBeatAlign2)
   (graph
      (transitions
         ((kGuitarIntro)
            (self))
         ((kGuitarNormal kGuitarExtreme kGuitarSpecial kGuitarIdle kGuitarBad kWalkStop)
            (kGuitarNormal kGuitarSpecial kGuitarExtreme kGuitarIdle kGuitarWin kGuitarLose kGuitarBad))
