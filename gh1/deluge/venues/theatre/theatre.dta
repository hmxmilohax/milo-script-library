{arena load_section lighting lighting}
{arena load_section crowd crowd}
#define FLARES (
   (ok_chorus01.flare
      ok_chorus01.flare
      ok_chorus02.flare
      ok_chorus03.flare
      ok_chorus04.flare
      ok_chorus05.flare
      ok_chorus06.flare
      ok_chorus07.flare
      ok_chorus08.flare
   )
)
#define FLARE_UP (0)
#define FLARE_DOWN (360)
#define BAD ((loop 60000 65000))
#define OKV ((loop 30000 35000))
#define OKC ((loop 40000 45000))
#define OKS ((loop 50000 55000))
#define GRV ((loop 0 3840))
#define GRC ((loop 10000 13840))
#define GRS ((loop 20000 23840))
#define OFF ((loop 99999 99999))
{func set_lights_bad
   {arena switch_anim chorus.anim OFF (scale 1) (blend 0)}
   {arena switch_anim verse.anim BAD (scale 1) (blend 0)}
   {arena switch_anim solo.anim OFF (scale 1) (blend 0)}
   {arena switch_anim great_verse.anim OFF (scale 1) (blend 0)}
   {arena switch_anim full.anim BAD (scale 1) (blend 0)}
   {arena switch_anim mainlight.anim BAD (scale 1) (blend 0)}
   {arena set_singer_env singer0.env}
}
{func set_lights_okay_verse
   {arena switch_anim chorus.anim OFF (scale 1) (blend 0)}
   {arena switch_anim verse.anim OKV (scale 1) (blend 0)}
   {arena switch_anim solo.anim OFF (scale 1) (blend 0)}
   {arena switch_anim great_verse.anim OFF (scale 1) (blend 0)}
   {arena switch_anim full.anim OKV (scale 1) (blend 0)}
   {arena switch_anim mainlight.anim OKV (scale 1) (blend 0)}
   {arena set_singer_env singer0.env}
}
{func set_lights_okay_chorus
   {arena switch_anim chorus.anim OKC (scale 1) (blend 0)}
   {arena switch_anim verse.anim OFF (scale 1) (blend 0)}
   {arena switch_anim solo.anim OFF (scale 1) (blend 0)}
   {arena switch_anim great_verse.anim OFF (scale 1) (blend 0)}
   {arena switch_anim full.anim OKC (scale 1) (blend 0)}
   {arena switch_anim mainlight.anim OKC (scale 1) (blend 0)}
   {arena set_singer_env singer2.env}
}
{func set_lights_okay_solo
   {arena switch_anim chorus.anim OFF (scale 1) (blend 0)}
   {arena switch_anim verse.anim OFF (scale 1) (blend 0)}
   {arena switch_anim solo.anim OKS (scale 1) (blend 0)}
   {arena switch_anim great_verse.anim OFF (scale 1) (blend 0)}
   {arena switch_anim full.anim OKS (scale 1) (blend 0)}
   {arena switch_anim mainlight.anim OKS (scale 1) (blend 0)}
   {arena set_singer_env singer1.env}
}
{func set_lights_great_verse
   {arena switch_anim chorus.anim OFF (scale 1) (blend 0)}
   {arena switch_anim verse.anim GRV (scale 2) (blend 0)}
   {arena switch_anim solo.anim OFF (scale 1) (blend 0)}
   {arena switch_anim great_verse.anim GRV (scale 2) (blend 0)}
   {arena switch_anim full.anim GRV (scale 2) (blend 0)}
   {arena switch_anim mainlight.anim GRV (scale 2) (blend 0)}
   {arena set_singer_env singer0.env}
}
{func set_lights_great_chorus
   {arena switch_anim chorus.anim GRC (scale 2) (blend 0)}
   {arena switch_anim verse.anim OFF (scale 1) (blend 0)}
   {arena switch_anim solo.anim OFF (scale 1) (blend 0)}
   {arena switch_anim great_verse.anim GRV (scale 2) (blend 0)}
   {arena switch_anim full.anim GRC (scale 2) (blend 0)}
   {arena switch_anim mainlight.anim GRC (scale 2) (blend 0)}
   {arena set_singer_env singer2.env}
}
{func set_lights_great_solo
   {arena switch_anim chorus.anim OFF (scale 1) (blend 0)}
   {arena switch_anim verse.anim OFF (scale 1) (blend 0)}
   {arena switch_anim solo.anim GRS (scale 2) (blend 0)}
   {arena switch_anim great_verse.anim GRV (scale 2) (blend 0)}
   {arena switch_anim full.anim GRS (scale 2) (blend 0)}
   {arena switch_anim mainlight.anim GRS (scale 2) (blend 0)}
   {arena set_singer_env singer1.env}
}
{func hit_speakers
   ($speakers)
   {foreach $anim $speakers
      {arena switch_anim
         $anim
         (range {random_int 150 180} 0)
         (scale 1)
         (blend 0)
      }
   }
}
{func hit_speakers_lite
   ($speakers)
   {foreach $anim $speakers
      {arena switch_anim $anim (range {random_int 85 130} 0) (scale 1) (blend 0)}
   }
}
{func hit_guitar_amp
   ($slot)
   {hit_speakers
      {switch $slot
         (0 (greycone5.tnm))
         (1 (greycone3.tnm greycone4.tnm))
         (2 (greycone3.tnm greycone4.tnm))
         (3 (greycone1.tnm greycone2.tnm))
         (4 (greycone1.tnm greycone2.tnm))
      }
   }
   {switch $slot
      (0
         {hit_speakers_lite
            (greycone1.tnm greycone2.tnm greycone3.tnm greycone4.tnm)
         }
      )
      (1 {hit_speakers_lite (greycone1.tnm greycone2.tnm greycone5.tnm)})
      (2 {hit_speakers_lite (greycone5.tnm greycone1.tnm greycone2.tnm)})
      (3 {hit_speakers_lite (greycone3.tnm greycone4.tnm greycone5.tnm)})
      (4 {hit_speakers_lite (greycone3.tnm greycone4.tnm greycone5.tnm)})
   }
}
{func curtain_open
   {animate_to arena main_curtains.view 2500 5000}
}
{func curtain_close
   {animate_to arena main_curtains.view 0 5000}
}
{arena add_handlers
   (finish_loading
      {"6 foot camera.cam" add_trans rim_light.lit}
      {great_verse.anim unhook_anim_parents}
      {full.anim unhook_anim_parents}
      {chorus.anim unhook_anim_parents}
      {verse.anim unhook_anim_parents}
      {solo.anim unhook_anim_parents}
      {cybal_smallTop01.tnm unhook_anim_parents}
      {cybal_smallTop02.tnm unhook_anim_parents}
      {greycone1.tnm unhook_anim_parents}
      {greycone2.tnm unhook_anim_parents}
      {greycone3.tnm unhook_anim_parents}
      {greycone4.tnm unhook_anim_parents}
      {greycone5.tnm unhook_anim_parents}
      {greycone06.tnm unhook_anim_parents}
      {greycone07.tnm unhook_anim_parents}
      {greycone08.tnm unhook_anim_parents}
      {greycone09.tnm unhook_anim_parents}
      {greycone10.tnm unhook_anim_parents}
      {kickdrum01.tnm unhook_anim_parents}
      {kickdrum02.tnm unhook_anim_parents}
      {kickdrum03.tnm unhook_anim_parents}
      {kickdrum04.tnm unhook_anim_parents}
      {grey_cone_anm.mnm unhook_anim_parents}
      {main_curtains.view unhook_anim_parents}
   )
   (intro_start {flare_obstruct.view set_showing TRUE})
   (terminate
      {delete set_lights_bad}
      {delete set_lights_okay_verse}
      {delete set_lights_okay_chorus}
      {delete set_lights_okay_solo}
      {delete set_lights_great_verse}
      {delete set_lights_great_chorus}
      {delete set_lights_great_solo}
      {delete hit_guitar_amp}
      {delete hit_speakers}
      {delete curtain_open}
      {delete curtain_close}
   )
   (kick_drum
      {game anim_task kickdrum01.tnm 10 0 120}
      {game anim_task kickdrum02.tnm 10 0 120}
      {game anim_task kickdrum03.tnm 10 0 120}
      {game anim_task kickdrum04.tnm 10 0 120}
      {game anim_task grey_cone_anm.mnm 200 0 120}
   )
   (bass_hit
      {hit_speakers
         (greycone06.tnm
            greycone07.tnm
            greycone08.tnm
            greycone09.tnm
            greycone10.tnm
         )
      }
   )
   (hit_gem {hit_guitar_amp $slot})
   (excitement_bad {curtain_close})
   (excitement_okay {curtain_close})
   (excitement_great {curtain_open})
   (set_lights_bad {set_lights_bad})
   (set_lights_okay_verse {set_lights_okay_verse})
   (set_lights_okay_chorus {set_lights_okay_chorus})
   (set_lights_okay_solo {set_lights_okay_solo})
   (set_lights_great_verse {set_lights_great_verse})
   (set_lights_great_chorus {set_lights_great_chorus})
   (set_lights_great_solo {set_lights_great_solo})
   (chorus
      {if {> $arena.excitement kExcitementBad}
         {foreach $flare FLARES
            {$flare set_steps FLARE_UP}
         }
         {flare_obstruct.view set_showing FALSE}
         {arena delay_task
            240
            {foreach $flare FLARES
               {$flare set_steps FLARE_DOWN}
            }
            {flare_obstruct.view set_showing TRUE}
         }
      }
   )
   (finish_loading
      {"6 foot camera.cam" add_trans rim_light.lit}
      {curtain_close}
   )
   (game_won {curtain_open})
   (game_lost {curtain_close})
}