{arena add_handlers
   (intro_start {eval {elem $camedit.MULTIPLAYER 0}})
   (intro_skip {eval {elem $camedit.MULTIPLAYER 0}})
   (active_players_changed
      {cond
         ({'||'
               {== $active_players 0}
               {== $active_players 3}}
            {eval {elem $camedit.MULTIPLAYER 0}}
         )
         ({== $active_players 1}
            {eval {elem $camedit.MULTIPLAYER_0 0}}
         )
         ({== $active_players 2}
            {eval {elem $camedit.MULTIPLAYER_1 0}}
         )
      }
   )
}