{new
   InkPanel
   shop_tattoo_panel
   (file
      "shop_tattoo_og.milo")
   (focus ink.lst)
   (original_tattoo
      "")
   (current_torso 0)
   (current_wrist 0)
   (current_hands 0)
   (enter
      {do
         ($tour_char
            {shop_char_panel get tour_char})
         ($char
            {shop_char_panel get char})
         {set
            [current_torso]
            {{shop_char_panel get tour_char}
               selected_outfit
               torso}}
         {set
            [current_wrist]
            {{shop_char_panel get tour_char}
               selected_outfit
               wrist}}
         {set
            [current_hands]
            {{shop_char_panel get tour_char}
               selected_outfit
               hands}}
         {{$this outfit_loader}
            select
            torso
            naked}
         {{$this outfit_loader}
            select
            wrist
            none}
         {{$this outfit_loader}
            select
            hands
            naked}
         {{$this outfit_loader}
            start_load}
         {shop_char_panel
            select_cam
            "tattoo_idle"}
         {$this
            set_gender
            {$tour_char get_gender}}
         {set
            [original_tattoo]
            {$char get tattoo_prefab}}
         {ink.lst
            set_selected
            [original_tattoo]}
         {$this update}})
   (outfit_loader
      {{shop_char_panel get char}
         find
         OutfitLoader.outfit})
   (SCROLL_MSG
      {do
         ($ink_token
            {ink.lst selected_sym})
         ($char
            {shop_char_panel get char})
         {ink.lbl set text_token $ink_token}
         {ink_desc.lbl
            set
            text_token
            {sprintf
               "%s%s"
               $ink_token
               "_desc"}}
         {$char set tattoo_prefab $ink_token}})
   (BUTTON_DOWN_MSG
      {do
         ($tour_char
            {shop_char_panel get tour_char})
         ($char
            {shop_char_panel get char})
         {switch
            $action
            (kAction_Confirm
               {$tour_char
                  set_tattoo_prefab
                  $char
                  {ink.lst selected_sym}}
               {shop_char_panel save}
               {ui goto_screen shop_ink_screen})
            (kAction_Cancel
               {$char
                  set
                  tattoo_prefab
                  [original_tattoo]})}}
      kDataUnhandled)
   (exit
      {{$this outfit_loader}
         select
         torso
         [current_torso]}
      {{$this outfit_loader}
         select
         wrist
         [current_wrist]}
      {{$this outfit_loader}
         select
         hands
         [current_hands]}
      {{$this outfit_loader}
         start_load})}
{new
   BandScreen
   shop_tattoo_screen
   (panels
      meta
      #ifndef DAN_FAST
      jukebox_panel
      #endif
      shop_char_panel
      shop_tattoo_panel
      shop_money_panel)
   (focus shop_tattoo_panel)
   (back shop_ink_screen)
   (helpbar
      ((cancel helpbar_back)
         (confirm helpbar_select)))}