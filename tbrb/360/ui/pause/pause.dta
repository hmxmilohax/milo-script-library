   (on_selected {pause_panel resume})
}
{new Object
   pausecommand_restart
   (should_display
      {if_else
         {&&
            {! {gamemode in_mode tutorial}}
            {! {gamemode in_mode drum_trainer}}
            {'||'
               {gamemode get local_network}
               {&& {is_leader_local} {== {gamemode get player_arrangement} kArrangeBand}}
            }
         }
         {do
            {if {< {session num_users} {gamemode get min_players}}
               {pause_panel disable
                  {pause_panel find
                     {elem {pause_panel get pause_buttons} {pause_panel get button_count}}
                  }
               }
            }
            TRUE
         }
         FALSE
      }
   )
   (on_selected
      {pause_panel set exit_destination exit_restart}
      {if_else {gamemode in_mode practice}
         {pause_panel on_restart}
         {ui goto_screen confirm_quit_screen}
      }
   )
}
