(old_excitement kExcitementInvalid)
(override_group '')
(rooftop FALSE)
(enter
   {$this set_fullness 1 1}
   {set
      [old_excitement]
      kExcitementInvalid}
   {set
      [override_group]
      ''}
   {set
      [rooftop]
      {has_substr
         {{$this dir}
            get_path_name}
         rooftop}})
(animate
   ($bad $ok $great)
   {if_else
      [rooftop]
      {$this
         iterate_frac
         ($bad
            {main.drv play_group rooftop_bad $crowd.play_flags})
         ($ok
            {main.drv play_group rooftop_ok $crowd.play_flags})
         ($great
            {main.drv play_group rooftop_great $crowd.play_flags})}
      {$this
         iterate_frac
         ($bad
            {main.drv play_group bad $crowd.play_flags})
         ($ok
            {main.drv play_group ok $crowd.play_flags})
         ($great
            {main.drv play_group great $crowd.play_flags})}})
(crowd_update
   {do
      ($over
         [override_group])
      {cond
         ($over
            {$this
               iterate_frac
               (1
                  {main.drv play_group $over $crowd.play_flags})}
            {set
               [old_excitement]
               kExcitementInvalid})
         ($crowd.authored_action
            {$this
               iterate_frac
               (1
                  {main.drv play_group $crowd.authored_action $crowd.play_flags})}
            {set
               [old_excitement]
               kExcitementInvalid})
         {do
            ($level
               {min $crowd.authored_excitement $crowd.game_excitement})
            {if
               {!=
                  $level
                  [old_excitement]}
               {set
                  [old_excitement]
                  $level}
               {$this set show_3d_only FALSE}
               {switch
                  $level
                  (kExcitementIdle
                     {$this
                        iterate_frac
                        (1
                           {main.drv play_group realtime_idle $crowd.idle_flags})})
                  (kExcitementLost
                     {$this
                        iterate_frac
                        (1
                           {main.drv play_group lose $crowd.idle_flags})})
                  (kExcitementBoot
                     {$this animate 1.0 0.0 0.0})
                  (kExcitementBad
                     {$this animate 0.8 0.2 0.0})
                  (kExcitementOkay
                     {$this animate 0.0 0.8 0.2})
                  (kExcitementGreat
                     {$this animate 0.0 0.0 1.0})
                  (kExcitementWon
                     {do
                        ($win_group
                           {if_else
                              [rooftop]
                              rooftop_win
                              win})
                        {$this
                           iterate_frac
                           (1
                              {main.drv play_group $win_group $crowd.idle_flags})}})
                  {notify
                     "unknown excitement level "
                     $level}}}}}})
(override_anim
   ($group_name)
   {set
      [override_group]
      $group_name})