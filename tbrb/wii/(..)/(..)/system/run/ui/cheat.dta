{new
   UIPanel
   system_cheat_panel
   (file
      "cheat.milo")
   (focus cheat.lst)
   (enter
      {project.lbl
         set
         edit_text
         {sprintf
            "%s Cheats - %s"
            {elem
               {find $syscfg rnd title}
               1}
            {elem
               {find $syscfg version}
               1}}}
      {cheat.lst set_provider cheat_provider}
      {$this update_filter})
   (BUTTON_DOWN_MSG
      {switch
         $action
         (kAction_Cancel
            {ui pop_screen})
         (kAction_ViewModify
            {cheat_provider next_filter}
            {cheat.lst set_selected 0}
            {$this update_filter})}
      kDataUnhandled)
   (KEY_MSG
      {switch
         $key
         (KB_DOWN
            {$this button_down '' kPad_DDown kAction_Down $pad_num})
         (KB_UP
            {$this button_down '' kPad_DUp kAction_Up $pad_num})
         (KB_RIGHT
            {$this button_down '' kPad_R2 kAction_PageDown $pad_num})
         (KB_LEFT
            {$this button_down '' kPad_L2 kAction_PageUp $pad_num})
         (KB_ENTER
            {handle
               ($this button_down '' kPad_X kAction_Confirm $pad_num)})})
   (SELECT_MSG
      {cheat_provider
         invoke
         {cheat.lst selected_pos}
         $user})
   (update_filter
      {filter.lbl
         set
         edit_text
         {cheat_provider filter}})
   (cheat_invoked
      ($script)
      {cheat.lst refresh})}
{new
   UIScreen
   system_cheat_screen
   (panels system_cheat_panel)
   (focus system_cheat_panel)
   (is_system_cheat TRUE)}
{func
   show_cheat_screen
   ($screen)
   {unless
      {ui in_transition}
      {cond
         ({==
               {ui current_screen}
               $screen}
            {ui pop_screen})
         ({==
               {handle_ret
                  ({ui current_screen}
                     is_system_cheat)}
               TRUE}
            {ui goto_screen $screen})
         (TRUE
            {ui push_screen $screen})}}}