{new
   BandScreen
   sdmode_begin_dialog
   (panels dialog_panel)
   (focus dialog_panel)
   (final_screen '')
   (done FALSE)
   (result kOpSuccess)
   (done_creating_cache FALSE)
   (enable_sdmode TRUE)
   (enter
      {if
         {'||'
            {==
               {content_mgr get_mode}
               kSDMode}
            {&&
               {!
                  [enable_sdmode]}
               {!=
                  [final_screen]
                  options_gameplay_panel}}}
         {set
            [done]
            TRUE}
         {$this leave}}
      {dialog_panel set_msg dlc_sdmode_checking}
      {dialog_panel
         set
         helpbar_state
         ((min_height 0))}
      {set
         [done]
         FALSE}
      {set
         [result]
         kOpSuccess})
   (poll
      {if
         {&&
            {content_mgr refresh_done}
            {!
               [done]}}
         {if_else
            {==
               {content_mgr get_mode}
               kSDMode}
            {do
               {set
                  [done]
                  TRUE}
               {$this leave}}
            {do
               {set
                  [done]
                  TRUE}
               {set
                  [result]
                  {content_mgr sd_mode_check}}
               {switch
                  [result]
                  (kOpMissingCard
                     {$this leave})
                  (kOpIncompatibleCard
                     {ui goto_screen sdmode_incomp_dialog})
                  (kOpMissingData
                     {helpbar
                        set_config
                        ((confirm helpbar_select))}
                     {dialog_panel set_ok dlc_missing_content})
                  (kOpDataPresent
                     {$this continue})
                  {if
                     {'||'
                        [enable_sdmode]
                        {==
                           [final_screen]
                           options_gameplay_panel}}
                     {script_task
                        kTaskUISeconds
                        (delay 1.0)
                        (script
                           {helpbar
                              set_config
                              ((confirm helpbar_select))}
                           {dialog_panel set_yesno dlc_start_sdmode yes.btn})}}}}}}
      {if
         {&&
            {==
               [done_creating_cache]
               TRUE}
            {content_mgr refresh_done}}
         {set
            [done_creating_cache]
            FALSE}
         {$this leave}})
   (SELECT_MSG
      {switch
         $component
         (yes.btn
            {$this continue})
         (no.btn
            {if
               {!=
                  [final_screen]
                  options_gameplay_panel}
               {set
                  [enable_sdmode]
                  FALSE}}
            {ui goto_screen sdmode_enable_later_dialog})
         (ok.btn
            {$this leave})})
   (continue
      {switch
         [result]
         (kOpSuccess
            {ui goto_screen sdmode_success_dialog})
         (kOpFail
            {ui goto_screen sdmode_failed_dialog})
         (kOpMissingCard
            {ui goto_screen sdmode_insert_dialog})
         (kOpIncompatibleCard
            {ui goto_screen sdmode_incomp_dialog})
         (kOpMissingData
            {dialog_panel set_ok dlc_missing_content})
         (kOpCorruptCard
            {ui goto_screen sdmode_corrupted_dialog})
         (kOpIncorrectCard
            {ui goto_screen sdmode_incorrect_device_dialog})
         (kOpBackupNeeded
            {content_mgr set_mode kSDMode}
            {ui goto_screen sdmode_backup_dialog})
         (kOpDataPresent
            {content_mgr set_mode kSDMode}
            {set
               [done_creating_cache]
               TRUE})
         (kOpNoNANDSpace
            {ui goto_screen sdmode_space_dialog})
         (kOpNoNANDInodes
            {ui goto_screen sdmode_space_dialog})})
   (leave
      {script_task
         kTaskUISeconds
         (delay 1.0)
         (script
            {$this really_leave})})
   (really_leave
      {if_else
         {==
            {ui pushed_screens}
            0}
         {ui
            goto_screen
            [final_screen]}
         {if_else
            [final_screen]
            {ui
               pop_screen
               [final_screen]}
            {ui pop_screen}}})}
