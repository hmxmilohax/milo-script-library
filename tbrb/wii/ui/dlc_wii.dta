#include ..\config\macros.dta
{new
   UIPanel
   content_backup_panel
   (file
      "dlc_dialog_wii.milo")
   (destination '')
   (fail_destination '')
   (result kOpSuccess)
   (in_music_store FALSE)
   (enter
      {dialog_title.lbl set_showing TRUE}
      {msg.lbl set_showing TRUE}
      {synth keyboard_pause_voices TRUE}
      {meter_grow.msnm set_frame 0}
      {dialog_title.lbl set text_token dlc_backup_title}
      {ok.btn set_showing FALSE}
      {set
         [result]
         {content_mgr backup_check}}
      {switch
         [result]
         (kOpMissingCard
            {$this set_msg dlc_backup_nosdcard})
         (kOpSDSize
            {if_else
               {==
                  {content_mgr get_last_result_value}
                  1}
               {$this
                  set_msg
                  (dlc_backup_nosdspace_singular
                     {content_mgr get_last_result_value})}
               {$this
                  set_msg
                  (dlc_backup_nosdspace_plural
                     {content_mgr get_last_result_value})}})
         (kOpSuccess
            {helpbar
               set_config
               ()}
            {content_mgr set_transfer_callback $this}
            {content_mgr start_backup}
            {do
               ($content_name
                  {content_mgr current_backup})
               {msg.lbl set_token_fmt dlc_backup_inprogress}})
         (kOpIncompatibleCard
            {$this set_msg dlc_backup_sdincompatible})
         (kOpCorruptCard
            {$this
               set_msg
               (dlc_backup_failed)})
         (kOpIncorrectCard
            {$this
               set_msg
               (dlc_backup_failed)})
         (kOpFail
            {$this
               set_msg
               (dlc_backup_failed)})
         {$this
            set_msg
            (dlc_backup_failed)}})
   (exit
      {synth keyboard_pause_voices FALSE}
      {if
         {==
            {content_mgr get_mode}
            kSDMode}
         {content_mgr clear_nand_contents}}
      {content_mgr clear_transfer_callback}
      {set
         [in_music_store]
         FALSE})
   (poll
      {if
         {progress.grp showing}
         {meter_grow.msnm
            set_frame
            {content_mgr backup_percent}}})
   (transfer_complete
      ($result)
      {set
         [result]
         $result}
      {do
         ($content_name
            {content_mgr current_backup})
         {switch
            [result]
            (kOpSuccess
               {if_else
                  {content_mgr backup_is_finished}
                  {if_else
                     {==
                        [in_music_store]
                        TRUE}
                     {if_else
                        {==
                           [destination]
                           ''}
                        {ui pop_screen}
                        {ui
                           goto_screen
                           [destination]}}
                     {$this set_msg dlc_backup_complete}}
                  {do
                     {$this set_focus msg.lbl}
                     {msg.lbl set_token_fmt dlc_backup_inprogress}
                     {ok.btn set_showing FALSE}
                     {progress.grp set_showing TRUE}}})
            (kOpMissingCard
               {$this set_msg dlc_backup_nosdcard})
            (kOpSDSize
               {if_else
                  {==
                     {content_mgr get_last_result_value}
                     1}
                  {$this
                     set_msg
                     (dlc_backup_nosdspace_singular
                        {content_mgr get_last_result_value})}
                  {$this
                     set_msg
                     (dlc_backup_nosdspace_plural
                        {content_mgr get_last_result_value})}})
            (kOpSDWriteProtected
               {$this set_msg dlc_backup_sdwriteprotected})
            (kOpIncompatibleCard
               {$this set_msg dlc_backup_sdincompatible})
            (kOpFail
               {$this
                  set_msg
                  (dlc_backup_failed)})
            {$this
               set_msg
               (dlc_backup_failed)}}})
   (set_msg
      ($msg)
      {progress.grp set_showing FALSE}
      {ok.btn set_showing TRUE}
      {msg.lbl set_token_fmt $msg}
      {$this set_focus ok.btn}
      {helpbar
         set_config
         ((confirm helpbar_select))})
   (SELECT_MSG
      {switch
         [result]
         (kOpMissingCard
            {if_else
               {==
                  [in_music_store]
                  TRUE}
               {do
                  {set
                     [destination]
                     ''}
                  {set
                     [fail_destination]
                     ''}
                  {ui pop_screen}
                  {store_panel finish_checkout}}
               {if_else
                  {==
                     [destination]
                     ''}
                  {do
                     {content_mgr set_mode kNANDMode}
                     {sdmode_disabled_dialog set destination ''}
                     {ui goto_screen sdmode_disabled_dialog}}
                  {do
                     {content_mgr set_mode kNANDMode}
                     {sdmode_disabled_dialog
                        set
                        destination
                        [destination]}
                     {ui goto_screen sdmode_disabled_dialog}}}})
         (kOpSuccess
            {if_else
               {==
                  [destination]
                  ''}
               {ui pop_screen}
               {ui
                  goto_screen
                  [destination]}})
         (kOpSDSize
            {if_else
               {==
                  {content_mgr backup_check}
                  kOpSuccess}
               {do
                  {helpbar
                     set_config
                     ()}
                  {content_mgr set_transfer_callback $this}
                  {content_mgr start_backup}
                  {do
                     ($content_name
                        {content_mgr current_backup})
                     {msg.lbl set_token_fmt dlc_backup_inprogress}}}
               {if_else
                  {==
                     [in_music_store]
                     TRUE}
                  {if_else
                     {==
                        [destination]
                        ''}
                     {ui pop_screen}
                     {do
                        {dialog_title.lbl set_showing FALSE}
                        {ok.btn set_showing FALSE}
                        {msg.lbl set_showing FALSE}
                        {ui
                           goto_screen
                           [destination]}}}
                  {if_else
                     {==
                        [destination]
                        ''}
                     {do
                        {content_mgr set_mode kNANDMode}
                        {sdmode_disabled_dialog set destination ''}
                        {ui goto_screen sdmode_disabled_dialog}}
                     {do
                        {dialog_title.lbl set_showing FALSE}
                        {ok.btn set_showing FALSE}
                        {msg.lbl set_showing FALSE}
                        {content_mgr set_mode kNANDMode}
                        {sdmode_disabled_dialog
                           set
                           destination
                           [destination]}
                        {ui goto_screen sdmode_disabled_dialog}}}}})
         {if_else
            {==
               [in_music_store]
               TRUE}
            {if_else
               {==
                  [fail_destination]
                  ''}
               {ui pop_screen}
               {ui
                  goto_screen
                  [fail_destination]}}
            {if_else
               {==
                  [fail_destination]
                  ''}
               {do
                  {content_mgr set_mode kNANDMode}
                  {sdmode_disabled_dialog set destination ''}
                  {ui goto_screen sdmode_disabled_dialog}}
               {do
                  {content_mgr set_mode kNANDMode}
                  {sdmode_disabled_dialog
                     set
                     destination
                     [fail_destination]}
                  {ui goto_screen sdmode_disabled_dialog}}}}})}
{new
   BandScreen
