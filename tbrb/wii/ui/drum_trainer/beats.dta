{new
   DrumTrainerPanel
   drum_trainer_beats_panel
   (delay_change_beat FALSE)
   (has_score TRUE)
   (score_only_fills FALSE)
   (fills_always_on FALSE)
   (fills_forced FALSE)
   (hide_beat_markers FALSE)
   (enable_button_up TRUE)
   (enable_button_down TRUE)
   (enable_button_left TRUE)
   (enable_button_right TRUE)
   (enable_button_drums FALSE)
   (show_tab_data TRUE)
   (fills_only_tab FALSE)
   (metronome_state TRUE)
   (has_count_in TRUE)
   (hide_bpm FALSE)
   (bpm_interval 20)
   (bpm_percent_interval 10)
   (use_bpm_percent FALSE)
   (render_beat_mask TRUE)
   (unmute_all_drums FALSE)
   (preview_beat_screen TRUE)
   (set_drum_samples TRUE)
   (show_ringo_description TRUE)
   (preview_first_beat TRUE)
   (default_bpm 80)
   (default_drums 0)
   (default_beat 0)
   (default_metronome 1)
   DRUM_TRAINER_MAIN_PANEL_BASE
   (get_beat_title
      ($beat)
      {sprint
         {$this get_beat_name $beat}
         "_lesson"})
   (get_beat_description
      {sprint
         {$this
            get_beat_name
            {$this get current_beat}}
         "_lesson_desc"})
   (get_beat_ringo_description
      {sprint
         {$this
            get_beat_name
            {$this get current_beat}}
         "_lesson_ringo"})
   (play_beat_vo
      {$this
         play_vo
         {sprint
            {$this
               get_beat_name
               {$this get current_beat}}
            "_lesson_ringo"}})}
{new
   BandScreen
   drum_trainer_beats_screen
   (panels DRUM_TRAINER_MAIN_SCREEN_PANELS drum_trainer_beats_panel)
   (focus drum_trainer_beats_panel)
   DRUM_TRAINER_MAIN_SCREEN_BASE}
{new
   BandScreen
   drum_trainer_beats_greeting_screen
   (panels DRUM_TRAINER_MAIN_SCREEN_PANELS drum_trainer_beats_panel drum_trainer_greeting_panel)
   (focus drum_trainer_greeting_panel)
   (helpbar
      ((confirm helpbar_select)))
   (enter
      {{gamemode get game_panel}
         pause}
      {{drum_trainer_greeting_panel find beat_practice.grp}
         set_showing
         TRUE}
      {{drum_trainer_greeting_panel find ringo_practice.grp}
         set_showing
         FALSE}
      {{drum_trainer_greeting_panel find freeplay.grp}
         set_showing
         FALSE})
   (exit
      {{gamemode get game_panel}
         set
         mute_metronome
         FALSE}
      {{gamemode get game_panel}
         unpause})}