{new
   UIPanel
   tutorials_content_loading_panel
   (load
      {content_mgr start_refresh}
      {content_loading_panel allowed_to_show TRUE})
   (finish_load
      {content_loading_panel allowed_to_show FALSE})
   (is_loaded
      {content_mgr refresh_done})}
{new
   BandScreen
   tutorials_loading_screen
   (TRANSITION_COMPLETE_MSG
      {ui reset_screen tutorials_postloading_screen})
   (panels tutorials_content_loading_panel loading_panel)
   (allow_back FALSE)
   (animate_transition FALSE)}
{new
   BandScreen
   tutorials_postloading_screen
   (TRANSITION_COMPLETE_MSG
      {meta_performer
         set_song
         {{{gamemode get main_panel}
               get_lesson}
            get
            song}}
      {{game get_participant_config 0}
         set_difficulty
         kDifficultyEasy}
      {{game get_participant_config 0}
         set_track_type
         {gamemode get start_tracktype}}
      {ui
         goto_screen
         {gamemode get game_screen}})
   (panels loading_panel)
   (allow_back FALSE)
   (animate_transition FALSE)}