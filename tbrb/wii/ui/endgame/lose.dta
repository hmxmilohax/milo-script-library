#define LOSE_PANEL_HANDLERS
((quit_button '')
   (voiceover_symbol '')
   (enter
      {$this set_volume_offset_symbol voiceover_failscreen_volume_offset}
      {$this
         set
         voiceover_symbol
         {random_context_allow_failure
            {find $syscfg vo_failsong_context}}}
      {if
         {!=
            [voiceover_symbol]
            ''}
         {$this
            set_voiceover_symbol
            [voiceover_symbol]}
         {$this set_preload FALSE}
         {$this play_voiceover}}
      {input_mgr set_limit kLimitSessionLeader}
      {$this set_focus lose_restart.btn}
      {lose_song_data.lbl
         set_song_name
         {meta_performer song}}
      {do
         ($mp
            {beatmatch main_performer})
         {lose_progress_data.lbl
            set_token_fmt
            percent_complete_format
            {$mp percent_complete}}
         {song_section.lbl
            set
            text_token
            {beatmatch
               get_section_at_ms
               {$mp progress_ms}}}}
      {normal_mode.trg trigger}
      {do
         ($has_part FALSE)
         {user_mgr
            foreach_user
            $user
            {if
               {meta_performer
                  part_plays_in_song
                  {$user get_track_sym}}
               {set $has_part TRUE}}}
         {if_else
            {&&
               {gamemode in_mode multisong}
               {==
                  {session num_users}
                  1}
               $has_part}
            {do
               {set
                  [quit_button]
                  lose_quit.btn}
               {$this
                  enable
                  [quit_button]}
               {[quit_button]
                  set_showing
                  TRUE}
               {[quit_button]
                  set
                  text_token
                  quit}
               {menu_item_3.btn set text_token practice}}
            {do
               {lose_quit.btn set_showing FALSE}
               {$this disable lose_quit.btn}
               {set
                  [quit_button]
                  menu_item_3.btn}
               {[quit_button]
                  set
                  text_token
                  quit}}}}
      {session
         add_sink
         $this
         (remote_user_left)}
      {$this set_up_buttons})
   (exit
      {session remove_sink $this remote_user_left})
   (set_up_buttons
      {if_else
         {<
            {session num_users}
            {gamemode get min_players}}
         {do
            {$this disable lose_restart.btn}
            {if
               {exists lose_diff.btn}
               {$this disable lose_diff.btn}}
            {$this disable lose_selsong.btn}
            {$this
               set_focus
               [quit_button]}}
         {do
            {$this enable lose_restart.btn}
            {if
               {exists lose_diff.btn}
               {$this enable lose_diff.btn}}
            {$this enable lose_selsong.btn}}})
   (REMOTE_USER_LEFT_MSG
      {$this set_up_buttons})
   (SELECT_MSG
      {switch
         $component
         (lose_restart.btn
            #ifdef HX_WII
            {platform_mgr set_is_restarting TRUE}
            #endif
            {if
               {!
                  {meta_performer disband_if_bad_configuration}}
               {rnd set_dof_tint FALSE 0.0 0.0 0.0}
               {game clear_draw_glitch}
               {game send_restart_game_net_msg}
               {game_restart}})
         (lose_diff.btn
            {rnd set_dof_tint FALSE 0.0 0.0 0.0}
            {game clear_draw_glitch}
            {[quit_confirm_screen]
               set
               quitting
               FALSE}
            {$this confirm_goto meta_loading_ready_screen})
         (lose_selsong.btn
            {rnd set_dof_tint FALSE 0.0 0.0 0.0}
            {game clear_draw_glitch}
            {[quit_confirm_screen]
               set
               quitting
               FALSE}
            {$this confirm_goto meta_loading_continue_screen})
         {if_else
            {==
               $component
               [quit_button]}
            {do
               {[quit_confirm_screen]
                  set
                  quitting
                  TRUE}
               {rnd set_dof_tint FALSE 0.0 0.0 0.0}
               {game clear_draw_glitch}
               {$this confirm_goto meta_loading_main_screen}}
            {if
               {&&
                  {exists menu_item_3.btn}
                  {== $component menu_item_3.btn}}
               {practice_panel
                  set
                  uses_harmony
                  {meta_performer is_now_using_vocal_harmony}}
               {[quit_confirm_screen]
                  set
                  quitting
                  TRUE}
               {practice_sel_section_panel
                  set_initial_section
                  {beatmatch
                     get_section_at_ms
                     {{beatmatch main_performer}
                        progress_ms}}}
               {$this confirm_goto meta_loading_practice_screen}}}})
   (confirm_goto
      ($destination)
      {[quit_confirm_screen]
         set
         return_screen
         {ui current_screen}}
      {[quit_confirm_screen]
         set
         confirm_screen
         $destination}
      {ui
         goto_screen
         [quit_confirm_screen]}))
{new
   VoiceoverPanel
   lose
   (file lose.milo)
   (quit_confirm_screen lose_confirm_quit_screen)
   LOSE_PANEL_HANDLERS}
#define LOSE_SCREEN_HANDLERS
((update_helpbar
      {if_else
         {is_leader_local}
         {helpbar
            set_config
            ((confirm helpbar_select))}
         {helpbar
            set_config
            ()}})
   (enter
      {$this update_helpbar}))
{new
   BandScreen
   lose_screen
   (panels lose)
   (focus lose)
   LOSE_SCREEN_HANDLERS}
#define COMMON_LOSE_QUIT_CONFIRM
((focus dialog_panel)
   (confirm_screen '')
   (return_screen '')
   (quitting FALSE)
   (helpbar
      {if_else
         {is_leader_local}
         ((confirm helpbar_select))
         ((cancel helpbar_back))})
   (enter
      {input_mgr set_limit kLimitSessionLeader}
      {dialog_panel set_yesno confirm_quit no.btn}
      {unless
         {is_leader_local}
         {helpbar set_widget confirm ''}}
      {$this set_up_buttons}
      {session
         add_sink
         $this
         (remote_user_left)})
   (exit
      {session remove_sink $this remote_user_left}
      {unless
         [quitting]
         {net_sync enable}})
   (REMOTE_USER_LEFT_MSG
      {$this set_up_buttons})
   QUIT_DIALOG_SET_UP_BUTTONS
   (SELECT_MSG
      {switch
         $component
         (yes.btn
            {if_else
               {==
                  [confirm_screen]
                  meta_loading_main_screen}
               {ui_event_mgr trigger_event quit_to_main}
               {if_else
                  [quitting]
                  {ui
                     pop_screen
                     [confirm_screen]}
                  {ui
                     sync_screen
                     [confirm_screen]
                     0}}})
         (no.btn
            {ui
               goto_screen
               [return_screen]})}))
{new
   BandScreen
   lose_confirm_quit_screen
   (panels lose dialog_panel)
   COMMON_LOSE_QUIT_CONFIRM}