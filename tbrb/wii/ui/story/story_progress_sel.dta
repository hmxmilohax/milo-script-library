         {dialog_panel find opt1.btn}}
      {session
         add_sink
         $this
         (signin_changed)})
   (exit
      {dialog_panel
         enable
         {dialog_panel find opt1.btn}}
      {session remove_sink $this signin_changed})
   (SELECT_MSG
      {ui pop_screen})
   (JOYPAD_CONNECT_MSG
      {ui pop_screen})
   (signin_changed
      {ui pop_screen})}
{new
   BandScreen
   story_progress_no_owner_screen
   (panels dialog_panel)
   (focus dialog_panel)
   (helpbar
      ((confirm helpbar_select)))
   (enter
      {dialog_panel
         set_ok
         (story_progress_create_progress_no_owner_fmt
            {profile_mgr get_max_bands})}
      {platform_mgr add_sink $this})
   (exit
      {platform_mgr remove_sink $this})
   (SELECT_MSG
      {ui pop_screen})
   (signin_changed
      {ui pop_screen})}