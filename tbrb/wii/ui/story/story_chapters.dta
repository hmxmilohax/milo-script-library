{new
   StoryPrizePanel
   story_prizes_panel
   (file
      "story_prizes.milo")
   (focus
      "prizes.lst")
   (enter
      {story_music start_ambient_sound})
   (exit
      {story_music stop_ambient_sound})
   (SELECT_MSG
      {if
         {$this is_up}
         {if
            {$this selection_is_playable_video}
            {$this handle_select_video_watched}
            {$this set_saved_prize_position}
            {story_mediaplay_panel
               set
               videos
               {$this get_selected_video}}
            {ui goto_screen story_mediaplay_screen}}})
   (SCROLL_MSG
      {if
         {$this is_up}
         {$this refresh_helpbar}})
   (TRANSITION_COMPLETE_MSG
      {$this refresh_helpbar})
   (refresh_helpbar
      {if_else
         {$this selection_is_playable_video}
         {helpbar set_widget confirm prize_video_play}
         {helpbar set_widget confirm ''}})
   (BUTTON_DOWN_MSG
      {if_else
         {&&
            $user
            {==
               {$user connected_controller_type}
               kControllerVocals}
            {== $raw_button kPad_L1}}
         {do
            {$this goto_previous_category}
            {play_instr_sfx $user button_toggle}
            kDataUnhandled}
         {switch
            $action
            (kAction_Confirm
               {if_else
                  {!
                     {$this selection_is_playable_video}}
                  0
                  kDataUnhandled})
            (kAction_Option
               {$this goto_next_category}
               {play_instr_sfx $user button_toggle}
               kDataUnhandled)
            #ifdef HX_WII
            (kAction_Option1
               {$this goto_next_category}
               {play_instr_sfx $user button_toggle}
               kDataUnhandled)
            #endif
            kDataUnhandled}})}
