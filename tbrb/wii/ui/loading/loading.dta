{new
   LoadingPanel
   loading_panel
   (file
      [loading_screen_file])
   (next_screen '')
   (loading_screen_file
      {$this choose_loading_screen})
   (max_audio_block_time 20000)
   (allowed_transition_actions
      (kAction_Confirm
         kAction_Cancel
         kAction_Option
         kAction_Start
         kAction_ViewModify
         kAction_Up
         kAction_Down
         kAction_Left
         kAction_Right
         kAction_PageUp
         kAction_PageDown
         #ifdef HX_WII
         kAction_Option1
         #endif))
   (load
      {$this set_volume_offset_symbol voiceover_loading_volume_offset}
      {gamecfg set_active_roster TRUE}
      {if
         {== $first_screen loading_screen}
         {content_mgr start_refresh}}
      {seed_random_context
         {gamecfg get net_random_seed}}
      {game set multi_event FALSE}
      {$this initialize})
   (enter
      {if
         {'||'
            {==
               {ui_event_mgr current_event}
               pad_lost}
            {==
               {ui_event_mgr current_event}
               remote_exit}}
         {ui_event_mgr dismiss_event}}
      {if
         {$this exists show_skip.anim}
         {show_skip.anim set_frame 0}})
   (show_skip
      {cond
         ({!
               {$this exists show_skip.anim}}
            {notify
               "No show_skip.anim exists for "
               [loading_screen_file]})
         ({!=
               {show_skip.anim get rate}
               k30_fps_ui}
            {notify
               "show_skip.anim in "
               [loading_screen_file]
               " is not on the UISeconds timeline!"})
         {show_skip.anim animate}})
   (block_event
      ($event)
      {!= $event data_error})}
{new
   BandScreen
   loading_screen
   (panels loading_panel)
   (enter
      {net_sync set_ui_state kNetUI_InGame}
      {input_mgr set_limit kLimitSession}
      {ui goto_screen preloading_screen})}
{new
   PreloadPanel
   preload_panel
   (content_name
      "")
   (corrupt FALSE)
   (enter
      #ifdef IGNORE_PRELOAD_OK
      {ui goto_screen real_loading_screen}
      #else
      {if_else
         [preload_ok]
         {ui goto_screen real_loading_screen}
         {ui
            content_file_read_failed
            [content_name]
            [corrupt]}}
      #endif)}
{new
   BandScreen
   preloading_screen
   (panels loading_panel preload_panel)
   (focus preload_panel)}
{new
   BandScreen
   real_loading_screen
   (panels loading_panel)
   (focus loading_panel)
   (enter
      {song_mgr
         add_recent_song
         {meta_performer song}}
      {if
         {meta_performer has_sync_permission}
         {meta_performer advance_song_select_user}}
      {synth stop_all_sfx}
      {if_else
         {!=
            {gamemode get pregame_screen}
            ''}
         {ui
            goto_screen
            {gamemode get pregame_screen}}
         {ui
            goto_screen
            {gamemode get game_screen}}})}