{new
   CorrectIdentityPanel
   correct_identity_panel
   (file
      "correct_identity.milo")
   (focus right_hand.hnl)
   (back_token back)
   (helpbar_allow_controller FALSE)
   (old_voice_context '')
   (enter
      {shell_input exit_controller_mode}
      {right_hand.hnl set_provider $this}
      {gesture_mgr set_identification_enabled FALSE}
      {set
         [old_voice_context]
         {voice_input_panel get_active_voice_context_name}}
      {ui force_letterbox_off_immediate}
      {script_task
         kTaskUISeconds
         (delay 0.1)
         (script
            {letterbox on_hide_mic})}
      {voice_input_panel activate_voice_context ''})
   (exit
      {gesture_mgr set_identification_enabled TRUE}
      {voice_input_panel
         activate_voice_context
         [old_voice_context]})
   SELECT_RIGHT_LIST_ITEM
   (poll SLIDE_RIGHT_LIST_ITEM)
   (NAV_SELECT_MSG 0)
   (NAV_HIGHLIGHT_MSG 0)
   (NAV_HIGHLIGHT_SETTLED_MSG 0)
   (NAV_SELECT_DONE_MSG
      {switch
         $component
         (right_hand.hnl
            {gesture_mgr set_identification_enabled TRUE}
            {$this identity_selected $index}
            {$this dismiss})
         (left_hand.hnl
            {$this dismiss})})
   (BUTTON_DOWN_MSG
      {switch
         $action
         (kAction_Cancel
            {shell_input enter_controller_mode TRUE}
            {run_flow left_select.flow}
            {$this dismiss})
         0})
   (on_voice_command
      ($command)
      {switch
         $command
         (profile_one
            {if
               {>
                  {$this num_data}
                  2}
               {$this select_right_list_item 0}})
         (profile_two
            {if
               {>
                  {$this num_data}
                  3}
               {$this select_right_list_item 1}})
         (profile_three
            {if
               {>
                  {$this num_data}
                  4}
               {$this select_right_list_item 2}})
         (profile_four
            {if
               {>
                  {$this num_data}
                  5}
               {$this select_right_list_item 3}})
         (new_player
            {$this
               select_right_list_item
               {-
                  {$this num_data}
                  2}})
         (enroll_sign_in
            {$this
               select_right_list_item
               {-
                  {$this num_data}
                  1}})
         BACRO})
   (TRANSITION_COMPLETE_MSG
      {$this dismiss})}