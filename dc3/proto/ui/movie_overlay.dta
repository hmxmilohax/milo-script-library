{new HamPanel
   movie_overlay_panel
   (file "movie_overlay.milo")
   (hide_helpbar TRUE)
   (show_hand_help FALSE)
   (hide_letterbox TRUE)
   (have_skipped FALSE)
   (enter
      {hamprovider set ui_nav_mode movie}
      {shell_input exit_controller_mode}
      {voice_input_panel activate_voice_context movie_overlay_screen}
      {{cursor_panel find depth_buffer_left.grp} set_showing FALSE}
      {{cursor_panel find depth_buffer_right.grp} set_showing FALSE}
      {set [have_skipped] FALSE}
   )
   (exit
      {hamprovider set ui_nav_mode shell}
      {{cursor_panel find depth_buffer_left.grp} set_showing TRUE}
      {{cursor_panel find depth_buffer_right.grp} set_showing TRUE}
   )
   (skip
      {if {! [have_skipped]}
         {set [have_skipped] TRUE}
         {{ui current_screen} skip_selected}
      }
   )
   SELECT_RIGHT_LIST_TOKEN
   (poll SLIDE_RIGHT_LIST_ITEM)
   (NAV_SELECT_MSG {$this skip})
   (on_voice_command
      ($command)
      {$this select_right_list_token $command}
   )
}