{new
   HamScreen
   store_want_to_checkout_warning_screen
   (panels background_confirmation_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel set_ok_no store_cart_full_checkout FALSE})
   (NAV_SELECT_MSG
      {if_else
         {== $name ok}
         {do
            {store_panel set_filter_to_cart}
