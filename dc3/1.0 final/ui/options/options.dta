{new OptionsPanel
   options_panel
   (file "options.milo")
   (focus right_hand.hnl)
   (focus_index 0)
   (pending_show_keyboard FALSE)
   (pending_purchase_offer FALSE)
   (offer_string "")
   (top_index 0)
   (back_token back)
   (back_screen main_screen)
   (enter
      {platform_mgr add_sink $this (ui_changed)}
      {set [pending_show_keyboard] FALSE}
      {set [pending_purchase_offer] FALSE}
      {set [offer_string] ""}
      {right_hand.hnl scroll_to_index [focus_index] [top_index]}
   )
   (exit
      {platform_mgr remove_sink $this ui_changed}
      {set [top_index] {right_hand.hnl get_top_index}}
   )
   SELECT_RIGHT_LIST_TOKEN
   (poll SLIDE_RIGHT_LIST_ITEM)
   (NAV_SELECT_MSG
      {switch $name
         (av_settings {ui goto_screen options_av_screen})
         (option_gameplay {ui goto_screen options_gameplay_screen})
         (movies {ui goto_screen options_movie_screen})
         (tutorials
            {options_tutorials_screen set back {ui current_screen}}
            {ui goto_screen options_tutorials_screen}
         )
         (back {$this on_back})
      }
   )
   (NAV_HIGHLIGHT_MSG
      {switch $component
         (right_hand.hnl {set [focus_index] $index})
      }
   )
   (BUTTON_DOWN_MSG
      {switch $action
         (
            (kAction_Cancel)
            {$this on_back}
         )
         kDataUnhandled
      }
   )
   (on_back
      {saveload_mgr autosave}
      {ui goto_screen [back_screen]}
   )
   (controller_req_op_complete
      ($success)
      {if {== $success TRUE}
         {shell_input set_last_select_in_controller_mode TRUE}
         {if_else {platform_mgr is_guide_showing}
            {set [pending_show_keyboard] TRUE}
            {$this show_keyboard}
         }
      }
   )
}
{new HamScreen
   options_screen
   (panels meta background_panel options_panel)
   (focus options_panel)
   (back main_screen)
   (handle_global_commands TRUE)
   (enter {voice_input_panel activate_voice_context options_screen})
   (on_voice_command
      ($command)
      {switch $command
         BACRO
         {options_panel select_right_list_token $command}
      }
   )
   (on_global_voice_command
      ($command)
      {switch $command
         (hidden_global_options)
         {on_global_voice_command $command}
      }
   )
}
{new MovieProvider movie_provider}
{new HamPanel
   options_movie_panel
   (file "options_movie.milo")
   (focus right_hand.hnl)
   (back_token back)
   (enter
      {movie_provider update_list}
      {right_hand.hnl set_provider movie_provider}
      {voice_input_panel activate_voice_context options_movies_screen}
   )
   (exit)
   SELECT_RIGHT_LIST_TOKEN
   (poll SLIDE_RIGHT_LIST_ITEM)
   (NAV_SELECT_MSG
      {switch $name
         (movie_intro {ui goto_screen intro_movie_screen})
         (movie_outro {ui goto_screen outro_movie_screen})
         (credits
            {text_credits_screen set next_screen {ui current_screen}}
            {if_else {profile_mgr has_finished_campaign}
               {ui goto_screen movie_credits_screen}
               {ui goto_screen text_credits_screen}
            }
         )
         (back {ui go_back_screen {{ui current_screen} get back}})
         {crew_movie_panel set videos $name}
         {ui goto_screen crew_movie_screen}
      }
   )
}
