{new Object
   readywait_pane
   (enter
      ($side)
      {multiuser_panel set_list_dir $side label_checkbox}
      {if_else {'||' {gamemode get requires_2_players} {hamprovider get is_in_party_mode}}
         {do
            {if_else {gamemode in_mode dance_battle}
               {multiuser_panel set_provider $side readywait_crew_throwdown.hnp}
               {multiuser_panel set_provider $side readywait_dance_battle.hnp}
            }
            {multiuser_panel disable_list $side}
         }
         {multiuser_panel set_provider $side readywait.hnp}
      }
      {if {hamprovider get is_in_party_mode}
         {multiuser_panel update_crew_throwdown_waiting_text $side}
      }
   )
   (exit ($side))
   (highlight ($side $name $index))
   (refresh
      ($side)
      {if {gamemode get requires_2_players}
         {multiuser_panel disable_list $side}
      }
   )
   (select
      ($side $name $index)
      {switch $name
         (skip_waiting
            {do
               ($other_side
                  {if_else {== $side 0}
                     1
                     0
                  }
               )
               {multiuser_panel drop_side $other_side}
               {multiuser_panel force_other_to_difficulty $side}
            }
            {do
               ($ret {multiuser_panel start_game})
               {if_else {== $ret 0}
                  skip_select_sound
                  $ret
               }
            }
         )
         (back
            {if {hamprovider get is_in_party_mode}
               {if {! {partymode_mgr is_team_signed_in 2}}
                  {multiuser_panel set_crew '' $side}
                  {multiuser_panel refresh_player_crew 0}
                  {multiuser_panel refresh_player_crew 1}
               }
            }
            {multiuser_panel cancel_ready $side}
         )
      }
   )
   (get_voice_command_index
      ($command $side)
      {switch $command
         (skip_waiting {set $readywait_pane_index 0})
         {set $readywait_pane_index {- 1}}
      }
      $readywait_pane_index
   )
   (get_speech_rule {set $rule readywait_screen} $rule)
   (get_voice_context {set $context readywait_screen} $context)
}