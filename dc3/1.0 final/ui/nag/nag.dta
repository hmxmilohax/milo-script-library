{new KinectSharePanel
   facebook_nag_post_panel
   (file "nag.milo")
   (enter {$this set texture preview.tex})
   (upload_complete
      ($msg)
      {if {profile_mgr has_active_profile}
         {do
            ($profile {profile_mgr get_active_profile})
            {$profile complete_current_nag TRUE}
         }
      }
      {facebook_nag_complete_screen set msg_token $msg}
      {ui goto_screen facebook_nag_complete_screen}
   )
   (upload_cancelled
      ($msg)
      {ui goto_screen main_screen}
   )
}
