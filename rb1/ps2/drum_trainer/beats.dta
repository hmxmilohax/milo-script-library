;;;
;;; main panel for the drum trainer beats mode
;;;
{new DrumTrainerPanel drum_trainer_beats_panel
   ;;
   ;; settings
   ;;
   (delay_change_beat       TRUE)
   (restart_beat_on_change  TRUE)
   (has_score               TRUE)
   (fills_always_on        FALSE)
   (fills_forced           FALSE)
   (hide_beat_markers      FALSE)
   (restart_on_loop        FALSE)
   (enable_button_up        TRUE)
   (enable_button_down      TRUE)
   (enable_button_left      TRUE)
   (enable_button_right     TRUE)
   (enable_button_drums     TRUE)
   (show_tab_data           TRUE)
   (fills_only_tab         FALSE)

   
   ;;
   ;; defaults
   ;;
   (default_bpm       80)
   (default_drums      0)
   (default_beat       0)
   (default_metronome  1)
   (default_loops      4)
   
   
   ;;
   ;; include the base panel
   ;;
   DRUM_TRAINER_MAIN_PANEL_BASE
}


;;;
;;; main screen for the drum trainer beats mode
;;;
{new UIScreen drum_trainer_beats_screen
   ;;
   ;; properties
   ;;
   (panels
      DRUM_TRAINER_MAIN_SCREEN_PANELS
      drum_trainer_beats_panel
   )
   (focus drum_trainer_beats_panel)


   ;;
   ;; include the base screen
   ;;
   DRUM_TRAINER_MAIN_SCREEN_BASE
}
