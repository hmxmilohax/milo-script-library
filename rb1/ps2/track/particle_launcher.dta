; so we can hook up a trigger
(EventTrigger
   (types
      (particle_trigger
         (editor
            (systems
               (array
                  object
                  (class ParticleLauncher)
                  (list {$this launcher_list})
               )
            )
            ;(systems (array object (class particle_launcher) (list {$this launcher_list})))
         )

         (systems ())

         (launcher_list
            {do
               ($array {array 0})
               {{$this dir} iterate
                  ParticleLauncher
                  $obj
                  ;{{$this dir} iterate Object $obj
                  ;   {if {== {$obj get_type} particle_launcher}
                  {push_back $array $obj}
                  ;   }
               }
               $array
            }
         )

         (trigger
            {foreach $elem [systems]
               {$elem launch_particles}
            }
         )
      )
   )
)