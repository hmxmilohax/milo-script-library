#define CROWD_AUDIO_HANDLERS
(
   ; fade out at results screen
   (results_duck 9) ;dB
   (results_fade_sec 10)
   
   ; transition effects
   (transition_effects TRUE)

   (intro_start
      {if {&& {$this want_intro} [transition_effects]}
         {play_game_seq crowd_begin}
      }
      {$this play_intro}
   )

   (intro_skip
      {if {&& {$this want_intro} [transition_effects]}
         {play_game_seq crowd_begin}
      }
      {$this play_intro}
   )

   (want_intro
      {||
         {! {tour performer}}
         {{tour performer} first_song}
      }
   )

   (want_outro_duck
      {||
         {! {tour performer}}
         {{tour performer} last_song}
      }
   )

   (game_lost
      {if [transition_effects]
         {play_game_seq crowd_lose}
      }
      {$this on_lose}
   )

   (music_end
      {unless {$this done}
         {do ($cue win_5.cue)
            {if [transition_effects]
               {if {gamemode is_band_arrangement}
                  {do ($num_stars {{band_0 main_performer} num_stars})
                     {switch $num_stars
                        (5 {set $cue win_5.cue})
                        (4 {set $cue win_4.cue})
                        {set $cue win_4.cue}
                     }
                  }
               }
               {play_game_seq $cue}
            }
         }
         {$this on_win}
      }
   )

   (coda_success
      {if [transition_effects]
         ; only play one copy in h2h
         {synth stop bre_success.cue}
         {play_game_seq bre_success.cue}
      }
   )

   (coda_blown
      {if [transition_effects]
         {play_game_seq bre_fail.cue}
      }
   )

   (final_win ($type)
      ; figure out which stream to play
#ifdef HX_XBOX
      {do ($strm
             {switch $type
                (all "wingame_band")
                (drum "wingame_drums")
                (guitar "wingame_guitar")
                "wingame_vocals"
             }
          )

          {$this play_stream 0 $strm}
      }
#endif
   )
)

