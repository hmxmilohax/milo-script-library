#include macros.dta

(mem
   (heaps
#ifdef HX_EE
      (main 22470000)
      (rnd   4450000 TRUE)
#else
      (main 27070000)
#endif
   )
)

(namespaces
   (char1 2000 30000)
)

(spew
   ;;{spew digimask foo.txt}
)

(rnd
   (show_timers FALSE)
   (overlays
      (digimask (lines 1) (showing TRUE))
   )
   (console_trycatch FALSE)   
   (title "DigiMask Test")
)
 

(digimask_female
   (align
      ('FT  '  8.94    .076 -0.17) ;; top of head, on median plane
      ('CHPT'  -.979  4.768 -0.17) ;; front tip of chin
      ('S9  '  1.969  5.616 -0.17) ;; tip of nose
      )

   (neck_adj
      (pos 1.774 1.2 0)
      (rot 0 0 0)
      (scale 0.7 0.7 0.7)
      )

   (eyewear 
      (add (set_y (average 'EYR4' 'EYL4') 'S8  ')
         (vec -.2 .53 0 )
         )
      )

   (head_scale
      (add 
         (z_scale 'SP01' 'SP02' 7.1) ;; head width
         (y_scale (average 'RBC ' 'LBC ') 'S2  ' 7.6) ;; front/back length
         (vec 1 0 0)
         )
      )

   (head_offset
      (vec 0 -.2 0)
      )
   )

(digimask_male
   (align
      ('FT  '  9.34    .032 -0.201) ;; top of head, on median plane
      ('CHPT'  -.782  4.809 -0.201)  ;; front tip of chin
      ('S9  '  2.277  5.848 -0.201)  ;; tip of nose
      )
   
   (neck_adj
      (pos 1.574 1.2 0)
      (rot 0 0 0)
      (scale 0.85 0.85 0.85)
      )
   
   (eyewear 
      (add (set_y (average 'EYR4' 'EYL4') 'S8  ')
         (vec -.2 .13 0 )
         )
      )

   (head_scale
      (add 
         (z_scale 'SP01' 'SP02' 6.5) ;; head width
         (y_scale (average 'RBC ' 'LBC ') 'S2  ' 7.6) ;; front/back length
         (vec 1 0 0)
         )
      )

   (head_offset
      (vec 0 -.9 0)
      )
   )



  
(quick_cheats

   (right
   )

   (keyboard
         
      (p {pause} ) ; toggle pause
      (c {cam_lock} ) ; toggle camera lock.
      (s {rnd save_objects digimask_copy.rnd char1})
      (S {digi save_head digimask.rnd})
      (g {digi toggle_gender} )

      (v {digi next_viseme})
      (b {digi next_brow})
      (l {digi next_lid})
      (i {digi inv})
      ('0' {digi load 0})
      ('1' {digi load 1})
      ('2' {digi load 2})
      ('3' {digi load 3})
      ('4' {digi load 4})

      (h {digi highlight "skin_henw_%d.mesh"})
   )
)


#merge default.dta
