   (helpbar ('' helpbar_continue))
}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; New unlock song unlocked hint
{new UIPanel tour_solo_newunlock_panel
   (file "tour_solo_newsong.milo") ; need a different file?
   TOUR_HINT_PANEL_HANDLERS
   (enter
      {do ($town {{tour performer} unlock_town})
         {{tour performer} set_town $town}
         
         ; need to refresh it with the new events
         {{tour solo_event_provider} set mode kTourVenueUnlock}
         {{tour solo_event_provider} refresh}      
         
         ; select the latest event so we select it in the list
         {{tour performer} set_event 
            {{tour solo_event_provider} last_event $town}
            {game get leader_num}
         }
   
         {town.lbl set_localized
            {sprintf
               {localize tour_solo_newsong}
               {song_mgr song_name {{tour performer} new_unlock}}
            }
         }   
            
         ; make sure we're on top of the unlock town     
         {tour_world_bg_panel set town {{tour performer} town}}
         {tour_world_bg_panel zoom_out}
         {tour_world_bg_panel update}
      }
   )
}

