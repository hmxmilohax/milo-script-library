;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Solo Tour Gig Complete
{new UIPanel tour_solo_gigcomplete_panel
   (file "tour_solo_gigcomplete.milo")
   (focus continue.btn)
   LIMIT_TO_LEADER_SESSION
      
   (enter   
      {do ($tp {tour performer})
          ($performer {beatmatch active_player 0})
          ($event {tour event})

         ; star rating
         {stars.lbl set_localized {$performer star_rating}}

         ; score
         {score.lbl set_localized {fmt_score {$performer score}}}
         
         ; $ reward! (always exists)
         {money.lbl set_localized 
            {sprintf
               {localize tour_solo_reward}
               {fmt_money {$tp reward}}
            }
         }
         
         ; outfit!
         {do ($instrument {$tp get_instrument})
             ($gender     {$tp get_gender})
             ($category   {$event unlock_category $instrument $gender})
             ($outfit     {$event unlock_outfit   $instrument $gender})
             ($line_idx 0) ; index of icon/label    
               
            {if {&& {!= $category ''}
                    {! {$tp has_outfit $category $outfit}}} 
               {{$this icon $line_idx} set_showing TRUE}
               {{$this icon $line_idx} set_mat icon_outfit.mat}
               
               {{$this line $line_idx} set_showing TRUE}
               {{$this line $line_idx} set_localized
                  {sprintf {localize tour_solo_outfit}
                     {localize_token 
                        {shop find_token $gender $category $outfit}
                     }
                  }
               }
               
               {++ $line_idx}
            }
         
            ; now complete the event, awarding songs, money, items...
            {{tour performer} complete_event}
   
            {cond
               ; new town!
               ; FOR CORE DISC SONGS, NOT FOR UNLOCK DISC SONGS
               ({!= {$tp new_town} ''}
                  {{$this icon $line_idx} set_showing TRUE}
                  {{$this icon $line_idx} set_mat icon_newtown.mat}

                  {{$this line $line_idx} set_showing TRUE}
                  {{$this line $line_idx} set_localized
                     {sprintf 
                        {localize tour_endgame_newtown} 
                        {localize {$tp new_town}}
                     }
                  }
                  
                  {++ $line_idx}
               )
               ; new unlock songs!
               ;; FOR UNLOCK DISC SONGS, NOT FOR CORE DISC
               ({!= {$tp new_unlock} ''}
                  {{$this icon $line_idx} set_showing TRUE}
                  {{$this icon $line_idx} set_mat icon_newtown.mat}

                  {{$this line $line_idx} set_showing TRUE}
                  {{$this line $line_idx} set_localized
                     {sprintf 
                        {localize tour_solo_newsong}
                        {song_mgr song_name {$tp new_unlock}}
                     }
                  }
                  
                  {++ $line_idx}
               )
            }
            
            ; hide unused icons/lines
            {foreach_int $i $line_idx 2
               {{$this icon $i} set_showing FALSE}
               {{$this line $i} set_showing FALSE}
            }
         }
            
         ; logging, assumes single song events
         {log_tour "EVENT   " {sprintf "WON $%d"  
            {{tour performer} reward}}}
         {log_tour "EVENT   " {sprintf "WON *x%d" {$performer num_stars}}}
         
         ; unlocked venue type achievement
         {foreach $venue (big_club theater arena)
            {if {$tp is_venue_type_unlocked $venue}
               {achievements submit {game get leader_num}
                  {symbol {sprintf "ach_solo_venue_%s" $venue}}
               }
            }
         }
      }  
   )
   
   (line ($idx)
      {sprintf "line%i.lbl" $idx}   
   )
   
   (icon ($idx)
      {sprintf "icon%i.mesh" $idx}  
   )
 
   (SELECT_START_MSG
      {ui goto_screen
         {if_else {{tour performer} is_winning}
            meta_loading_tour_win_screen
            meta_loading_continue_screen
         }
      }
      kDataUnhandled
   )
}


