; Character Profile
{new CharProfilePanel tour_char_profile_panel
   (file tour_char_profile.milo)
   (focus gamertag.btn)
   (player_num -1)
   (profile_player_num -1)

   (enter
      {$this set_char
         {{gamecfg get_player_config [profile_player_num]}
            get_char
         }
      }

      {$this disable topsongs.btn}

      {do
         ($is_local {$this is_local})
         ($op
            {if_else {&& $is_local {== [player_num] [profile_player_num]}}
               enable
               ; else
               disable
            }
         )

         {$this $op gamertag.btn}
         {$this $op motto.btn}

         {if_else $is_local
            {do
               {bands.lst set_provider {$this get_char_band_provider}}
               {song.lst set_provider {$this get_top_five_provider}}

               {if_else {> {$this get_band_count} 0}
                  {do
                     {$this enable bands.btn}
                     {bands.btn set_showing TRUE}
                     {bands.lst set_showing TRUE}
                  }
                  ; else
                  {do
                     {bands.btn set_showing FALSE}
                     {$this disable bands.btn}
                     {bands.lst set_showing FALSE}
                  }
               }

               {topsongs.btn set_showing TRUE}
               {song.lst set_showing TRUE}
            }
            ; else
            {do
               {$this disable bands.btn}
               {bands.btn set_showing FALSE}
               {topsongs.btn set_showing FALSE}
               {bands.lst set_showing FALSE}
               {song.lst set_showing FALSE}
            }
         }
      }

      {char_name.lbl set_localized {$this get_char_name}}
      {gamertag.btn set_localized {$this get_gamertag}}
      {cash.lbl set_localized {fmt_money {$this get_money}}}
      {motto.lbl set_localized {$this get_motto}}

      {do ($pcfg {game get_player_config [profile_player_num]})
         {instrument.lbl set_localized 
            {get_font_char_from_controller_type {$pcfg get_controller_type}}
         }
      }
   )

   (SELECT_MSG
      {switch $component
         (motto.btn
            {platform_mgr show_keyboard
               $player_num
               {get_motto_length}
               {localize tour_char_profile_vk_motto_title}
               {localize tour_char_profile_vk_motto_desc}
               {$this get_motto}
               $this
            }
         )
         (bands.btn
            {$this set_focus bands.lst}
         )
         (bands.lst
            {$this set_focus bands.btn}
         )
      }
   )

   (VIRTUAL_KEYBOARD_RESULT_MSG
      {if
         {&&
            $ok
            $this
            {ui focus_panel}
            {== {ui focus_panel} $this}
         }

         ; then

         {$this set_motto $text}
         {motto.lbl set_localized $text}

         {band_ui_sink show_network_busy_icon}
         {entity_uploader verify_band_motto $text $this}
      }
   )

   (BUTTON_DOWN_MSG
      {cond
         ({band_ui_sink is_network_busy}
            TRUE ;; eat message
         )
         ({== $button kPad_Tri}
            {if_else {== {$this focus_name} bands.lst}
               {do
                  {$this set_focus bands.btn}
                  TRUE
               }
               ; else
               kDataUnhandled
            }
         )
         (TRUE ;; else
            kDataUnhandled
         )
      }
   )

   (ROCK_CENTRAL_OP_COMPLETE_MSG
      {band_ui_sink hide_network_busy_icon}

      {switch $arg1
         (RB_RETCODE_CHAR_MOTTO_PROFANE
            {ui push_screen tour_char_motto_profane_screen}
         )
         (RB_RETCODE_CHAR_MOTTO_IP
            {ui push_screen tour_char_motto_ip_screen}
         )
         ; else (SUCCESS or SERVER_DOWN)
      }
   )
}

