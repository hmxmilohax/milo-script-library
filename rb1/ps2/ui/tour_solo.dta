; Solo Tour Hints
#define SOLO_TOUR_NEW_TOWN_UPDATE
(
   {do ($town {{tour performer} new_town})
      {if {!= $town ''}
         ; set the TourChar's town too
         {{tour performer} set_town $town}

         ; need to refresh it with the new events
         {{tour solo_event_provider} refresh}
         
         ; update the TourChar's event so we select it in the list
         {{tour performer} set_event 
            {{tour solo_event_provider} first_event $town}
            {game get leader_num}
         }
      }
   }    
   ; make sure we're on top of the current town     
   {tour_world_bg_panel set town {{tour performer} town}}
   {tour_world_bg_panel zoom_out}
   {tour_world_bg_panel update}
)

;;;;;;;;;;;;;;;;;;;;;;;;
; New town unlocked hint
{new UIPanel tour_solo_newtown_panel
   (file "tour_solo_newtown.milo")
   TOUR_HINT_PANEL_HANDLERS
   
   (enter
      SOLO_TOUR_NEW_TOWN_UPDATE     
      {town.lbl set_localized
         {sprintf {localize tour_solo_unlocked} 
            {localize_token {{tour performer} new_town}}
         }
      }
   )
}

{new UIScreen tour_solo_newtown_screen
   (panels meta tour_world_bg_panel tour_solo_newtown_panel helpbar)
