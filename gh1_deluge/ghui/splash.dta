#define ATTRACT_VIDEOS
((IWannaBeSedatedNails.pss Thunderkiss65Hazzard.pss MoreThanAFeelingNapalm.pss CUT_SCENE_VIDEO))
{new_gh_screen
   attract
   (panels meta)
   (allow_back FALSE)
   (animate_transition FALSE)
   (init
      {$this set attract_idx 0})
   (TRANSITION_COMPLETE_MSG
      {meta
         play_movie
         {$this next_attract_video}}
      {ui goto_screen splash})
   (next_attract_video
      {do
         ($video)
         {set
            $video
            {elem
               ATTRACT_VIDEOS
               {$this get attract_idx}}}
         {$this
            set
            attract_idx
            {'+'
               1
               {$this get attract_idx}}}
         {if
            {==
               {$this get attract_idx}
               {size ATTRACT_VIDEOS}}
            {$this set attract_idx 0}}
         $video})}
