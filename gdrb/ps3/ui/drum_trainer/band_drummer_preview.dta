{new
   UIPanel
   band_drummer_preview_panel
   (file
      "band_drummer_preview.milo")
   (enter
      {{gamemode get game_panel}
         set
         dpad_left
         FALSE}
      {{gamemode get game_panel}
         set
         dpad_right
         FALSE}
      {{gamemode get game_panel}
         set
         dpad_up
         FALSE}
      {{gamemode get game_panel}
         set
         dpad_down
         FALSE}
      {set
         [description_showing]
         FALSE}
      {$this update_labels}
      {synth stop_all_sfx})
   (exit)
   (update_labels
      {set_locale_verbose_notify FALSE}
      {{{gamemode get game_panel}
            find
            beat_description.lbl}
         set
         text_token
         {{gamemode get game_panel}
            get_beat_description}}
      {if
         {{gamemode get game_panel}
            get
            show_band_drummer_description}
         {if_else
            {$this has_description}
            {do
               {band_drummer_comment.lbl
                  set
                  text_token
                  {{gamemode get game_panel}
                     get_beat_band_drummer_description}}
               {if
                  {!
                     [description_showing]}
                  {band_drummer_comment_intro.trig trigger}
                  {set
                     [description_showing]
                     TRUE}}}
            {do
               {if
                  [description_showing]
                  {band_drummer_comment_outro.trig trigger}
                  {set
                     [description_showing]
                     FALSE}}}}}
      {set_locale_verbose_notify TRUE})
   (has_description
      {!=
         {localize
            {{gamemode get game_panel}
               get_beat_band_drummer_description}}
         {{gamemode get game_panel}
            get_beat_band_drummer_description}})
   (BUTTON_DOWN_MSG
      {if
         {&&
            {== $action kAction_Confirm}
            {!=
               {$user get_track_sym}
               none}
            {!
               {game is_game_over}}
            {session is_in_game}}
         {script_task
            kTaskUISeconds
            (delay 0)
            (script
               {ui pop_screen}
               {{{gamemode get game_panel}
                     find
                     drumtrainer_hum.cue}
                  play})}}
      {if
         {!=
            {$user get_track_sym}
            none}
         {switch
            $raw_button
            (kPad_DLeft
               {{{gamemode get game_panel}
                     find
                     dpad_left.trig}
                  trigger}
               {{gamemode get game_panel}
                  change_beat
                  -1}
               {$this update_labels})
            (kPad_DRight
               {{{gamemode get game_panel}
                     find
                     dpad_right.trig}
                  trigger}
               {{gamemode get game_panel}
                  change_beat
                  1}
               {$this update_labels})}}
      kDataUnhandled)
   (description_showing FALSE)}
{new
   BandScreen
   band_drummer_preview_screen
   (panels band_drummer_preview_panel)
   (focus band_drummer_preview_panel)
   (helpbar
      ((confirm helpbar_continue)))
   (enter
      {beatmatch set_time_paused TRUE}
      {game set_paused TRUE}
      {{get_track_panel}
         set_paused
         TRUE})
   (BUTTON_DOWN_MSG
      {if
         {== $action kAction_Start}
         {input_mgr set_user $user}
         {ui goto_screen pause_screen}}
      kDataUnhandled)
   (exit
      {beatmatch set_time_paused FALSE}
      {game set_paused FALSE}
      {{get_track_panel}
         set_paused
         FALSE}
      {synth
         play
         "button_select_drum"})}