#include macros.dta
(ui
   #include milo_ui.dta
)
(songs)
(objects
   #include milo_objects.dta
   (TimeSecs)
)
(milo
   (profile_target 0)
   (title "System")
   (spinner
      (low_sens 1.0e-3)
      (normal_sens 1.0e-2)
      (high_sens 0.1)
      (min_step_size 2.0e-2)
   )
   (obj_hide)
   (obj_filter
      Object
      Anim
      Draw
      Trans
      Poll
      ObjectDir
      UIComponent
      CharClip
      ('Lighting Objects' Light Spotlight LightPreset Environ RndDir)
   )
   (merge_file "c:\\\\temp.milo")
   (target "%s/milo_tool_%c%s")
   (max_paths
      (HMX_MAX_WDIR "%s")
      (HMX_SYSTEM_RUN "%s")
      (HMX_SYSTEM_MAX_FUNCS "%s/../tool/max/functions")
      (HMX_SYSTEM_MAX "%s/../tool/max")
   )
   (rotate_gizmo_sens 10)
   (dir_sizes 19997 150000)
)
(milo_tool
   (memtrack
      #ifdef HX_EE
      (mesh_rnd mFacePacket mEdgePacket)
      (mesh '*Mesh' Vert RndBones TransListNode)
      (bsp BSPNode)
      (tex_mov Resource Bitmap_buf PsMat PsTex)
      (part Particle ParticleSys)
      (keys '*Key')
      (other '*Rnd' '*Anim' View Cam Light Environ)
      #else
         #ifdef HX_XBOX
            ("mesh(phys)" "D3D(phys):Mesh")
            ("tex/mov(phys)" "D3D(phys):Tex" "D3D(phys):CubeTex" "Tex(phys)")
            ("mesh(main)" '*Mesh' Vert RndBones TransListNode)
            ("particles(main)" Particle ParticleSys)
            ("anim keys(main)" '*Key')
            ("lighting(main)" '*LightPreset' '*Spotlight')
            #ifdef _DEBUG
            ("char clips(main)" CharClipSamples)
            ("char(main)" '*Char' Trans)
            ("shadow map" "D3D(phys): Shadow Map")
            ("other d3d(main)" "XTL:D3D")
            ("other phys" "*(phys)")
            ("other main" '*')
            #endif
         #endif
      #endif
   )
)
#ifdef HX_PC
(timer
   (anim (enable TRUE))
   (draw (enable TRUE))
)
(mem (disable_mgr TRUE))
(rnd (overlays (song)))
#else
(system (xbox_map_file "%s/milo_tool_%s.map"))
(timer
   (anim (enable TRUE))
   (draw (enable TRUE))
   ('anim+draw' (enable TRUE))
)
(rnd
   (timer_script
      {set_timer_ms 'anim+draw' {'+' {timer_ms anim} {timer_ms draw}}}
   )
)
(mem
   (heaps
      #ifdef HX_EE
      (main (size 19000000))
      (rnd
         (size 8000000)
         (handle TRUE)
      )
      #else
         #ifdef HX_PS3
         (main (size 173000000))
         (local
            (size 0)
            (debug 0)
         )
         #else
            #ifdef HX_XBOX
            (main (size 135000000))
            #else
               #ifdef HX_WII
               (main
                  (size 110000000)
                  (region 1)
               )
               #else
               (main (size 268435456))
               #endif
            #endif
         #endif
      #endif
   )
   (pool
      (big_hunk 3100000)
      (small_hunk 50000)
   )
   #ifdef HX_EE
   (track_stl TRUE)
   (enable_tracking TRUE)
   #else
      #ifdef HX_XBOX
      (track_stl TRUE)
      (enable_tracking TRUE)
      #else
      (track_stl FALSE)
      (enable_tracking FALSE)
      #endif
   #endif
)
#endif
#merge default.dta