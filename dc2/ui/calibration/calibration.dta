{new
   CalibrationPanel
   calibration_panel
   (file
      "calibration.milo")
   (focus right_hand.hnl)
   (back_token back)
   (chosen_offset 0)
   (enter
      {right_hand.hnl set_provider calibration_offset_provider}
      {hamprovider set ui_nav_mode calibration}
      {meta music_stop}
      {set
         [chosen_offset]
         {profile_mgr get_song_to_taskmgr_ms_raw}})
   (exit
      {profile_mgr
         set_song_to_taskmgr_ms
         [chosen_offset]}
      {meta music_start})
   (NAV_SELECT_MSG
      {switch
         $component
         (right_hand.hnl
            {$this select_offset $index}
            skip_select_anim)
         (left_hand.hnl
            {if
               {== $name back}
               {ui
                  go_back_screen
                  {{ui current_screen}
                     get
                     back}}})})
   (select_offset
      ($index)
      {do
         ($offset
            {calibration_offset_provider get_offset $index})
         {set
            [chosen_offset]
            $offset}
         {profile_mgr set_song_to_taskmgr_ms $offset}
         {right_hand.hnl refresh}})
   (preview_offset
      ($index)
      {do
         ($offset
            {calibration_offset_provider get_offset $index})
         {profile_mgr set_song_to_taskmgr_ms $offset}})
   (NAV_HIGHLIGHT_MSG
      {if
         {!
            {ui in_transition}}
         {switch
            $component
            (right_hand.hnl
               {$this preview_offset $index})}})}
{new
   HamScreen
   calibration_screen
   (panels meta background_panel calibration_panel)
   (focus calibration_panel)
   (back options_av_screen)
   (scroll_sfx FALSE)}