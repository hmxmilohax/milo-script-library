{new HamStorePanel store_panel}
{new
   HamPanel
   store_main_panel
   (file
      "store_main.milo")
   (focus right_hand.hnl)
   (top_index 0)
   (focus_song_index 0)
   (back_token back)
   (meta_data_loaded_flag FALSE)
   (joypad
      (hold_ms 100)
      (repeat_ms 80))
   (enter
      {right_hand.hnl
         set_provider
         {store_panel filter_provider}}
      {right_hand.hnl
         scroll_to_index
         [focus_song_index]
         [top_index]}
      {if
         {!
            [meta_data_loaded_flag]}
         {store_panel request}})
   (exit
      {$this set meta_data_loaded_flag FALSE}
      {set
         [top_index]
         {right_hand.hnl get_top_index}})
   (NAV_SELECT_MSG
      {switch
         $component
         (right_hand.hnl
            {$this view_filtered_songs $index})
         (left_hand.hnl
            {switch
               $name
               (back
                  {ui
                     go_back_screen
                     {{ui current_screen}
                        get
                        back}})})})
   (NAV_HIGHLIGHT_MSG
      {switch
         $component
         (right_hand.hnl
            {set
               [focus_song_index]
               $index})})
   (view_filtered_songs
      ($index)
      {if
         [meta_data_loaded_flag]
         {store_panel set_filter $index}
         {store_songs_panel set top_index 0}
         {store_songs_panel set focus_song_index 0}
         {ui goto_screen store_songs_screen}})
   (meta_data_loaded
      {$this set meta_data_loaded_flag TRUE}
      {motd.lbl
         set
         set_prelocalized_string
         {store_panel get_motd}}
      {right_hand.hnl refresh})}
{new
   HamScreen
   store_main_screen
   (panels meta background_panel store_panel store_main_panel)
   (focus store_main_panel)
   (back main_screen)}