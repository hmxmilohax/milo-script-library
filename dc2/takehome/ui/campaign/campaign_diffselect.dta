{new
   CampaignDiffSelectPanel
   campaign_diffselect_panel
   (file
      "campaign_diffselect.milo")
   (focus right_hand.hnl)
   (focus_index 0)
   (top_index 0)
   (back_token back)
   (enter
      {$this refresh}
      {right_hand.hnl
         scroll_to_index
         [focus_index]
         [top_index]}
      {meta music_start})
   (exit
      {set
         [top_index]
         {right_hand.hnl get_top_index}})
   (NAV_SELECT_MSG
      {switch
         $component
         (right_hand.hnl
            {$this handle_select_diff})
         (left_hand.hnl
            {switch
               $name
               (back
                  {$this move_back_campaign})})})
   (NAV_HIGHLIGHT_MSG
      {switch
         $component
         (right_hand.hnl
            {set
               [focus_index]
               $index})})
   (handle_select_diff
      {$this select_diff}
      {if_else
         {meta_performer is_campaign_new}
         {ui goto_screen camp_intro_screen}
         {ui goto_screen campaign_crewselect_screen}})
   (update_diff_provider
      ($provider)
      {right_hand.hnl set_provider $provider}
      {right_hand.hnl
         scroll_to_index
         [top_index]
         [top_index]})
   (get_selected_diff_index
      {right_hand.hnl get_selected})
   (move_back_campaign
      {unless
         {ui in_transition}
         {ui
            go_back_screen
            {{ui current_screen}
               get
               back}}})}
{new
   HamScreen
   campaign_diffselect_screen
   (panels meta background_panel campaign_diffselect_panel)
   (focus campaign_diffselect_panel)
   (back main_screen)}