         {==
            [cur_measure]
            [music_start]}
         {$this
            run_flow
            "fade_in.flow"}}
      {if
         {==
            [cur_measure]
            [music_start]
            1}
         {foreach_int
            $i
            0
            {gamedata max_players}
            {handle
