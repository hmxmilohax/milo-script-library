            {==
               [next_gold]
               0}
            {do
               {$column set gold TRUE}
               {set
                  [next_gold]
                  {random_elem GOLD_FLASHCARD_FREQUENCY}}}
            {do
               {$column set gold FALSE}
               {--
                  [next_gold]}}}
         {$column
            set
            value
            {elem POINT_VALUES 0}}
         {$column set move_start $start_measure}
         {[move_dir]
            enable_detector
            $move}})
   (next_move
      ($column_index)
