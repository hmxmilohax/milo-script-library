#define NAV_TUTORIAL_DELAY_SECONDS (7.5)
{new HamPanel
   title_panel
   (file "title.milo")
   (show_hand_help FALSE)
   (focus right_hand.hnl)
   (enter
      {meta music_start}
      {hamprovider set ui_nav_mode title}
   )
   (exit {hamprovider set ui_nav_mode shell})
   (NAV_SELECT_MSG
      {switch $name
         (continue
            {skeleton_identifier set_up_initial_profiles}
            {if {&& {! {ui in_transition}} {== {ui current_screen} title_screen}}
               {ui goto_screen wait_main_after_saveload_screen}
            }
         )
      }
   )
}
{new HamPanel tutorial_nav_panel (file "../tutorial/tutorial_nav.milo")}
{new HamPanel empty_postproc_panel (file "empty_postproc.milo")}
{new HamScreen
   title_screen
   (panels meta background_panel title_panel tutorial_nav_panel)
   (focus title_panel)
}
{new HamPanel
   wait_for_saveload_panel
   (is_waiting TRUE)
   (enter {set [is_waiting] TRUE})
   (poll
      {if {&& {== [is_waiting] TRUE} {! {ui in_transition}} {saveload_mgr is_idle}}
         {set [is_waiting] FALSE}
         {{ui current_screen} saveload_complete}
      }
   )
}
{new HamScreen
   wait_check_signin_after_saveload_screen
   (panels meta background_panel empty_postproc_panel wait_for_saveload_panel)
   (focus wait_for_saveload_panel)
   (saveload_complete {ui goto_screen check_signin_screen})
}
{new HamScreen
   wait_main_after_saveload_screen
   (panels
      meta
      background_panel
      empty_postproc_panel
      wait_for_saveload_panel
      title_panel
      tutorial_nav_panel
   )
   (focus wait_for_saveload_panel)
   (enter {saveload_mgr activate})
   (saveload_complete
      {content_mgr start_refresh}
      {ui goto_screen main_screen}
   )
}
{new HamScreen
   unlock_all_screen
   (panels meta background_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel set_ok unlock_all_description}
      {meta unlock_all}
   )
   (NAV_SELECT_MSG {ui goto_screen options_gameplay_screen})
}
{new HamScreen
   unlock_classic1_screen
   (panels meta background_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {if_else {> {profile_mgr get_num_valid_profiles} 0}
         {do
            {dialog_panel set_ok unlock_classic1_description}
            {meta unlock_classic award_classic_outfit01}
            {synth run_flow cheat_unlock.flow}
         }
         {do
            {dialog_panel set_ok unlock_classic_description_error}
         }
      }
   )
   (NAV_SELECT_MSG {ui goto_screen options_gameplay_screen})
}
