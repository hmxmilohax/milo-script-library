#define TUTORIAL_PANEL_COMMON (
   (focus right_hand.hnl)
   (hide_helpbar {! {shell_input in_controller_mode}})
   (show_hand_help FALSE)
   (helpbar_allow_controller FALSE)
   (ready_disable_controller FALSE)
   (controller_mode_entered
      {if {! {tut_nav.flow is_running}}
         {right_hand.hnl set showing FALSE}
      }
   )
   (controller_mode_exited
      {if {! {tut_nav.flow is_running}}
         {right_hand.hnl set showing TRUE}
      }
   )
   (TRANSITION_COMPLETE_MSG {provider.hnp set_label 0 [continue_token]})
   (NAV_SELECT_MSG {ui goto_screen {{ui current_screen} get next_screen}})
   (poll
      {if {&& {tut_nav.flow is_running} {! [ready_disable_controller]}}
         {set [ready_disable_controller] TRUE}
      }
      {if {&& [ready_disable_controller] {! {tut_nav.flow is_running}}}
         {set [helpbar_allow_controller] TRUE}
         {helpbar resync}
      }
   )
   (exit
      {set [ready_disable_controller] FALSE}
      {set [helpbar_allow_controller] FALSE}
   )
)
{new HamPanel tutorial_next_panel (on_complete options)}
{new HamScreen
   tutorial_general_screen_0
