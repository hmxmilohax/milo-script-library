{new HamPanel
   practice_welcome_panel
   (file "practice_welcome.milo")
   (focus right_hand.hnl)
   (hide_helpbar TRUE)
   (show_perform_shortcut FALSE)
   (load
      {game_panel load}
      {world_panel load}
   )
   (unload
      {game_panel unload}
      {world_panel unload}
   )
   (enter
      {world_panel check_is_loaded}
      {hamprovider set ui_nav_mode practice_shell}
      {song.lbl set_song_name {gamedata get song}}
      {if_else
         {&&
            [show_perform_shortcut]
            {meta_performer is_difficulty_unlocked
               {difficulty_to_sym
                  {gamedata getp {hamprovider get ui_nav_player} difficulty}
               }
            }
         }
         {right_hand.hnl set nav_provider provider_postplaythrough.hnp}
         {right_hand.hnl set nav_provider provider.hnp}
      }
   )
   (NAV_SELECT_MSG
      {switch $name
         (practice_all
            {hamprovider set byo_bid FALSE}
            {practice_welcome_panel set show_perform_shortcut TRUE}
            {ui goto_screen game_screen}
         )
         (practice_choose {ui goto_screen practice_choose_screen})
         (pausecommand_quit {ui goto_screen meta_loading_pause_new_song_screen})
         (perform
            {if_else {gamemode in_mode campaign}
               {gamemode set_mode campaign_perform}
               {gamemode set_mode perform}
            }
            {ui goto_screen game_screen}
         )
      }
   )
}
{new HamScreen
   practice_welcome_screen
   (focus practice_welcome_panel)
   (panels background_panel practice_welcome_panel)
   (enter {$this set_showing TRUE})
}