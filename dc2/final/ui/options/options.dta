{new
   OptionsPanel
   options_panel
   (file
      "options.milo")
   (focus right_hand.hnl)
   (focus_index 0)
   (pending_show_keyboard FALSE)
   (pending_purchase_offer FALSE)
   (offer_string
      "")
   (top_index 0)
   (back_token back)
   (enter
      {platform_mgr
         add_sink
         $this
         (ui_changed)}
      {set
         [pending_show_keyboard]
         FALSE}
      {set
         [pending_purchase_offer]
         FALSE}
      {set
         [offer_string]
         ""}
      {if_else
         {&
            {rock_central get_motd_flags}
            1}
         {right_hand.hnl set nav_provider provider.hnp}
         {right_hand.hnl set nav_provider provider_nolinking.hnp}}
      {right_hand.hnl
         scroll_to_index
         [focus_index]
         [top_index]})
   (exit
      {platform_mgr remove_sink $this ui_changed}
      {set
         [top_index]
         {right_hand.hnl get_top_index}})
   (NAV_SELECT_MSG
      {switch
         $name
         (av_settings
            {ui goto_screen options_av_screen})
         (option_gameplay
            {ui goto_screen options_gameplay_screen})
         (movies
            {ui goto_screen options_movie_screen})
         (tutorials
            {ui goto_screen options_tutorials_screen})
         (redeem_code
            {if_else
               {profile_mgr has_active_profile}
               {do
                  ($profile
                     {profile_mgr get_active_profile})
                  {if_else
                     {platform_mgr
                        is_pad_signed_into_live
                        {$profile get_pad_num}}
                     {if_else
                        {rock_central is_online}
                        {do
                           {profile_mgr set_critical_profile $profile}
                           {platform_mgr show_controller_required $this}}
                        {do
                           {token_redemption_failed_screen set error leaderboard_no_net}
                           {ui goto_screen token_redemption_failed_screen}}}
                     {do
                        {token_redemption_failed_screen set error options_need_to_sign_in}
                        {ui goto_screen token_redemption_failed_screen}}}}
               {do
                  {token_redemption_failed_screen set error options_need_to_sign_in}
                  {ui goto_screen token_redemption_failed_screen}}}
            skip_select_anim)
         (linking_code
            {if_else
               {profile_mgr has_active_profile}
               {do
                  ($profile
                     {profile_mgr get_active_profile})
                  {if_else
                     {platform_mgr
                        is_pad_signed_into_live
                        {$profile get_pad_num}}
                     {if_else
                        {rock_central is_online}
                        {do
                           {profile_mgr set_critical_profile $profile}
                           {hamprovider set ui_nav_mode store}
                           {options_panel
                              get_linking_code
                              {$profile get_pad_num}}}
                        {do
                           {token_redemption_failed_screen set error leaderboard_no_net}
                           {ui goto_screen token_redemption_failed_screen}}}
                     {do
                        {token_redemption_failed_screen set error options_need_to_sign_in}
                        {ui goto_screen token_redemption_failed_screen}}}}
               {do
                  {token_redemption_failed_screen set error options_need_to_sign_in}
                  {ui goto_screen token_redemption_failed_screen}}})
         (back
            {ui
               go_back_screen
               {{ui current_screen}
                  get
                  back}})})
   (NAV_HIGHLIGHT_MSG
      {switch
         $component
         (right_hand.hnl
            {set
               [focus_index]
               $index})})
   (controller_req_op_complete
      ($success)
      {if
         {== $success TRUE}
         {shell_input set_last_select_in_controller_mode TRUE}
         {if_else
            {platform_mgr is_guide_showing}
            {set
               [pending_show_keyboard]
               TRUE}
            {$this show_keyboard}}})
   (token_redeemed
      ($status $offer_string $error)
      {token_redemption_failed_screen set error $error}
      {set
         [offer_string]
         $offer_string}
      {if_else
         {== $status TRUE}
         {if_else
            {platform_mgr is_guide_showing}
            {set
               [pending_purchase_offer]
               TRUE}
            {options_panel
               purchase_offer_by_offer_string
               {{profile_mgr get_active_profile}
                  get_pad_num}
               [offer_string]}}
         {ui goto_screen token_redemption_failed_screen}})
   (linking_code_retrieved
      ($status $linking_code)
      {linking_code_screen set text $linking_code}
      {ui goto_screen linking_code_screen})
   (VIRTUAL_KEYBOARD_RESULT_MSG
      {if
         {== $ok TRUE}
         {do
            ($active_profile
               {profile_mgr get_active_profile_no_override})
            {if_else
               {&&
                  {platform_mgr is_ethernet_cable_connected}
                  {platform_mgr
                     is_pad_signed_into_live
                     {$active_profile get_pad_num}}}
               {options_panel
                  redeem_token
                  {{profile_mgr get_active_profile}
                     get_pad_num}
                  $text}
               {do
                  {token_redemption_failed_screen set error error_ethernet_unplugged}
                  {ui goto_screen token_redemption_failed_screen}}}}})
   (show_keyboard
      {virtual_keyboard
         show_keyboard
         {{profile_mgr get_active_profile}
            get_pad_num}
         17
         {localize redeem_code}
         {localize redeem_code_desc}
         ""
         $this})
   (UI_CHANGED_MSG
      {if
         [pending_show_keyboard]
         {set
            [pending_show_keyboard]
            FALSE}
         {$this show_keyboard}}
      {if
         [pending_purchase_offer]
         {set
            [pending_purchase_offer]
            FALSE}
         {options_panel
            purchase_offer_by_offer_string
            {{profile_mgr get_active_profile}
               get_pad_num}
            [offer_string]}})
   (dc1_songs_redeemed
      {ui goto_screen unlock_classic5_screen})}
{new
   HamScreen
   unlock_classic5_screen
   (panels meta background_panel dialog_panel)
   (focus dialog_panel)
   (enter
      {if_else
         {>
            {profile_mgr get_num_valid_profiles}
            0}
         {do
            {dialog_panel set_ok unlock_classic5_description}
            {synth run_flow cheat_unlock.flow}}
         {do
            {dialog_panel set_ok unlock_classic_description_error}}})
   (NAV_SELECT_MSG
      {ui goto_screen options_screen})}
