{new
   HamPanel
   options_movie_panel
   (file
      "options_movie.milo")
   (focus right_hand.hnl)
   (back_token back)
   (enter
      {movie_provider update_list}
      {right_hand.hnl set_provider movie_provider})
   (exit)
   (NAV_SELECT_MSG
      {switch
         $name
         (movie_intro
            {ui goto_screen intro_movie_screen})
         (movie_outro
            {ui goto_screen outro_movie_screen})
         (credits
            {text_credits_screen
               set
               next_screen
               {ui current_screen}}
            #ifndef _SHIP
            {if_else
               $skip_movie_credits
               {ui goto_screen text_credits_screen}
               {ui goto_screen text_credits_screen}}
            #else
            {ui goto_screen text_credits_screen}
            #endif)
         (back
            {ui
               go_back_screen
               {{ui current_screen}
                  get
                  back}})
         {crew_movie_panel set videos $name}
         {ui goto_screen crew_movie_screen}})}
