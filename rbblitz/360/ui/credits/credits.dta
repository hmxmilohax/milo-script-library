{new
   CreditsPanel
   credits_panel
   (file
      "credits.milo")
   (focus credits.lst)
   (pause_bool FALSE)
   (credits_done
      {ui
         goto_screen
         {{ui current_screen}
            get
            back_screen}})
   (enter
      {$this set pause_bool FALSE}
      {shell_music_panel set_mute_state TRUE})
   (exit
      {shell_music_panel set_mute_state FALSE})
   (BUTTON_DOWN_MSG
      {switch
         $action
         (kAction_Cancel
            {$this pause_panel TRUE}
            {ui
               goto_screen
               {{ui current_screen}
                  get
                  back_screen}})
         (kAction_Start
            {$this
               set
               pause_bool
               {!
                  [pause_bool]}}
            {$this
               pause_panel
               [pause_bool]})
         (kAction_ViewModify
            {handle
               ($this button_down $user $raw_button kAction_Cancel $pad_num)})})}
{new
   UIScreen
   credits_screen
   (panels shell_music_panel credits_panel)
   (back_screen options_screen)
   (focus credits_panel)}
{new
   UIScreen
   pause_credits_screen
   (panels game_panel pause_panel game_fade_out_panel background_night_panel credits_panel)
   (back_screen game_screen)
   (focus credits_panel)}