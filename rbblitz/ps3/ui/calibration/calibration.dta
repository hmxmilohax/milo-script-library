{new
   UIPanel
   cal_quick_panel
   (file
      "cal_quick.milo")
   (focus audio_lag.sld)
   (enter
      {$this update_all_from_profile})
   (exit)
   (SCROLL_SELECT_MSG
      {unless
         $selected
         {$this on_slider_change $component}})
   (SCROLL_MSG
      {$this on_slider_change $component})
   (on_slider_change
      ($component)
      {switch
         $component
         (audio_lag.sld
            {console_data
               set_audio_latency_ms
               {'*'
                  5
                  {$component current}}})
         (video_lag.sld
            {console_data
               set_video_latency_ms
               {'*'
                  5
                  {$component current}}})})
   (update_all_from_profile
      {$this
         iterate
         UISlider
         $s
         {$s set_num_steps 15}
         {$this update_from_profile $s}})
   (update_from_profile
      ($component)
      {switch
         $component
         (audio_lag.sld
            {$component
               set_current
               {int
                  {clamp
                     {'+'
                        {/
                           {console_data get_audio_latency_ms}
                           5.0}
                        0.5}
                     0
                     14}}})
         (video_lag.sld
            {$component
               set_current
               {int
                  {clamp
                     {'+'
                        {/
                           {console_data get_video_latency_ms}
                           5.0}
                        0.5}
                     0
                     14}}})})}
