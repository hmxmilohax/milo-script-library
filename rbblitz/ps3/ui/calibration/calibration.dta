#define CAL_AUTO_PANEL
((state init)
   (old_lag 0)
   (confirmed FALSE)
   (set_state
      ($s)
      {set
         [state]
         $s}
      {switch
         [state]
         (init
            {cal_audio_instructions.lbl set showing TRUE}
            {cal_video_instructions.lbl set showing TRUE}
            {cal_instructions.lbl set text_token lag_info_why}
            {$this populate_setting_label})
         (calibrating
            {cal_instructions.lbl set text_token lag_measuring}
            {cal_setting.lbl
               set
               text_token
               ""})
         (success
            {cal_audio_instructions.lbl set showing FALSE}
            {cal_video_instructions.lbl set showing FALSE}
            {cal_instructions.lbl set text_token lag_success}
            {$this populate_setting_label})
         (failure
            {if_else
               [is_hardware]
               {do}
               {do
                  {cal_manual_failed_screen
                     set_retry_screen
                     {ui current_screen}}
                  {if_else
                     [is_video]
                     {cal_manual_failed_screen set_numbers_screen cal_manual_video_postfailure_screen}
                     {cal_manual_failed_screen set_numbers_screen cal_manual_audio_postfailure_screen}}
                  {ui push_screen cal_manual_failed_screen}}}
            {$this populate_setting_label})})
   (populate_setting_label
      {if_else
         [is_video]
         {cal_setting.lbl
            set_token_fmt
            (current_lag_setting
               {int
                  {floor
                     {'+'
                        0.5
                        {{$this get_calibration_mgr}
                           get_excess_video_lag}}}})}
         {cal_setting.lbl
            set_token_fmt
            (current_lag_setting
               {int
                  {floor
                     {'+'
                        0.5
                        {{$this get_calibration_mgr}
                           get_excess_audio_lag}}}})}})
   (enter
      {$this init_panel}
      {$this
         set_focus
         ""}
      #ifdef HX_PS3
      {button_press_ps3.mesh set showing TRUE}
      {button_press_xbox.mesh set showing FALSE}
      #else
      {button_press_ps3.mesh set showing FALSE}
      {button_press_xbox.mesh set showing TRUE}
      #endif)
   (init_panel
      {$this add_sink cal_background_panel}
      {$this set_state init}
      {set
         [max_slack]
         75}
      {set
         [anim_cycle_frames]
         50}
      {set
         [anim_num_cycles]
         2}
      {set
         [anim_resting_frame]
         0}
      {set
         [anim_half_off]
         FALSE}
      {set
         [confirmed]
         FALSE}
      {if_else
         [is_video]
         {do
            {set
               [cycle_time_ms]
               605}
            {set
               [old_lag]
               {{$this get_calibration_mgr}
                  get_excess_video_lag}}
            {set
               [video_enable]
               TRUE}
            {set
               [audio_enable]
               FALSE}}
         {do
            {set
               [cycle_time_ms]
               605}
            {set
               [old_lag]
               {{$this get_calibration_mgr}
                  get_excess_audio_lag}}
            {set
               [video_enable]
               FALSE}
            {set
               [audio_enable]
               TRUE}}}
      {set
         [hardware_mode]
         FALSE}
      {set
         [num_hits]
         32}
      {set
         [bottom_outliers]
         8}
      {set
         [top_outliers]
         4}
      {if
         [is_hardware]
         {set
            [num_hits]
            24}
         {set
            [hardware_mode]
            TRUE}
         {set
            [cycle_time_ms]
            555}
         {set
            [bottom_outliers]
            3}
         {set
            [top_outliers]
            3}})
   (TRANSITION_COMPLETE_MSG
      {$this initialize_content})
   (exit
      {if
         {!
            [confirmed]}
         {if_else
            [is_video]
            {console_data
               set_video_latency_ms
               [old_lag]}
            {console_data
               set_audio_latency_ms
               [old_lag]}}})
   (BUTTON_DOWN_MSG
      {if_else
         {&&
            {!=
               [state]
               failure}
            {!=
               [state]
               calibrating}
            {!
               [confirmed]}}
         {switch
            $action
            (kAction_Confirm
               {shell_sfx play_select}
               {$this set_state calibrating}
               {$this start_countdown $user})
            kDataUnhandled}
         {if_else
            {&&
               {== $action kAction_Cancel}
               {==
                  [state]
                  success}}
            {do
               {if_else
                  [is_video]
                  {console_data
                     set_video_latency_ms
                     [old_lag]}
                  {console_data
                     set_audio_latency_ms
                     [old_lag]}}
               {$this init_panel}
               {$this initialize_content}
               0}
            {if_else
               {&&
                  {==
                     [state]
                     calibrating}
                  {== $action kAction_Confirm}}
               0
               kDataUnhandled}}})
   (handle_idle_state)
   (handle_non_idle_state)
   (start_countdown
      ($user)
      {thread_task
         kTaskUISeconds
         (script
            {set
               [confirmed]
               FALSE}
            {cal_instructions.lbl set showing FALSE}
            {$this start_test $user}
            {$task
               wait
               {$this is_processing_input}}
            {if_else
               {$this get_test_quality}
               {do
                  {if_else
                     [is_video]
                     {console_data
                        set_video_latency_ms
                        {$this get_test_result}}
                     {console_data
                        set_audio_latency_ms
                        {$this get_test_result}}}
                  {$this set_state success}
                  {set
                     [confirmed]
                     TRUE}}
               {$this set_state failure}}
            {cal_instructions.lbl set showing TRUE})}))
