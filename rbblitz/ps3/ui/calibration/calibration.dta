#define CAL_MANUAL_PANEL_CONTENTS
((file cal_manual.milo)
   (enter
      {$this add_sink cal_background_panel}
      {if_else
         [is_video]
         {do
            {audio_labels.grp set_showing FALSE}
            {video_labels.grp set_showing TRUE}
            {set
               [prop]
               video_latency_ms}}
         {do
            {audio_labels.grp set_showing TRUE}
            {video_labels.grp set_showing FALSE}
            {set
               [prop]
               audio_latency_ms}}}
      {do
         ($latency
            {if_else
               {==
                  [prop]
                  audio_latency_ms}
               {console_data get_audio_latency_ms}
               {console_data get_video_latency_ms}})
         {set
            [old_latency]
            $latency}
         {$this set_latency $latency}}
      {set
         [parent]
         {ui current_screen}}
      {$this
         set_focus
         ""})
   (BUTTON_DOWN_MSG
      {do
         ($latency
            {if_else
               {==
                  [prop]
                  audio_latency_ms}
               {console_data get_audio_latency_ms}
               {console_data get_video_latency_ms}})
         {switch
            $action
            (kAction_Cancel
               {$this
                  set_latency
                  [old_latency]}
               kDataUnhandled)
            ((kAction_Up kAction_Right)
               {$this
                  set_latency
                  {increment_to_5mult $latency}})
            ((kAction_Down kAction_Left)
               {$this
                  set_latency
                  {decrement_to_5mult $latency}})
            kDataUnhandled}})
   (set_latency
      ($latency)
      {if
         {&&
            {> $latency -301}
            {< $latency 301}}
         {if_else
            {==
               [prop]
               audio_latency_ms}
            {console_data set_audio_latency_ms $latency}
            {console_data set_video_latency_ms $latency}}
         {current_offset.lbl
            set_token_fmt
            (cal_manual_offset
               {int $latency})}}))
