{new
   UIPanel
   entourage_buy_edit_panel
   (file
      "entourage_buy_edit.milo")
   (focus Buy.btn)
   (reset_focus TRUE)
   (enter)
   (FOCUS_MSG
      {entourage_buy_edit_focus $new_focus}
      {synth play move_hub.cue})
   (SELECT_MSG
      {switch
         $component
         (Buy.btn
            {ui goto_screen buy_entourage_screen}
            {synth play button_select})
         (Edit.btn
            {synth play button_select})})}
{func
   entourage_buy_edit_focus
   ($focus)
   {do
      {Buy.grp set_showing FALSE}
      {Edit.grp set_showing FALSE}
      {switch
         $focus
         (Buy.btn
            {Buy.grp set_showing TRUE})
         (Edit.btn
            {Edit.grp set_showing TRUE})}}}