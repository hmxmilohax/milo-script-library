{new
   BandSelectPanel
   tour_band_sel_panel
   (file
      "tour_band_sel.milo")
   (focus band.lst)
   (band_provider 0)
   (enter
      {user_mgr clear_users}
      {gamecfg reset_config}
      {tour clear_band}
      {input_mgr reset}
      {set
         [band_provider]
         {get_band_provider}}
      {band.lst
         set_provider
         [band_provider]}
      {$this reset_list_position}
      {meta music_load_and_start}
      {memcardmgr
         add_sink
         $this
         (save_load_all_complete_msg)})
   (poll
      {meta music_ensure_playing})
   (TRANSITION_COMPLETE_MSG
      {$this refresh_helpbar})
   (exit
      {memcardmgr remove_sink $this save_load_all_complete_msg})
   (reset_list_position
      {do
         ($default_pos
            {[band_provider]
               get_default_pos})
         {band.lst
            set_selected
            $default_pos
            {max
               0
               {- $default_pos 2}}}
         {if
            {[band_provider]
               is_pos_band
               $default_pos}
            {[band_provider]
               set_default_band_pos
               $default_pos}}})
   (BUTTON_DOWN_MSG
      {switch
         $action
         (kAction_Confirm
            {synth play button_select})
         (kAction_Cancel
            {synth play button_back})}
      kDataUnhandled)
   (can_show_gamercard
      ($pos)
      #ifdef HX_XBOX
      {&&
         {[band_provider]
            is_pos_band
            $pos}
         {!
            {[band_provider]
               is_band_local
               $pos}}}
      #else
      FALSE
      #endif)
   (refresh_helpbar
      {helpbar
         set_config
         {cond
            (TRUE
               ((cancel helpbar_back)))}}
      {if_else
         {[band_provider]
            is_pos_band
            {band.lst selected_pos}}
         {helpbar confirm tour_hb_selband}
         {helpbar confirm helpbar_select}})
   (SCROLL_MSG
      {synth play button_focus}
      {do
         ($pos
            {band.lst selected_pos})
         {if
            {[band_provider]
               is_pos_band
               $pos}
            {[band_provider]
               set_default_band_pos
               $pos}}}
      {$this refresh_helpbar})
   (SELECT_MSG
      {switch
         $component
         (band.lst
            {do
               ($pos
                  {band.lst selected_pos})
               {cond
                  ({[band_provider]
                        is_pos_create_band
                        $pos}
                     {if_else
                        {profile_mgr can_any_profile_own_a_new_band}
                        {do
                           #ifndef HX_XBOX
                           {tour
                              set_band
                              {tour create_new_band $player}}
                           {fx fade_out}
                           {ui
                              goto_screen
                              {gamemode get matchmaking_screen}}
                           #else
                           {ui push_screen tour_band_choose_owner_screen}
                           #endif}
                        {ui push_screen tour_band_no_owner_screen}})
                  ({[band_provider]
                        is_pos_join_band
                        $pos}
                     {cond
                        ({gamecfg is_missing_mic $player_num FALSE}
                           {vocalist_must_have_mic_screen set message solo_vocalist_needs_mic}
                           {ui push_screen vocalist_must_have_mic_screen})
                        ({!
                              {platform_mgr player_has_online_privilege $player_num}}
                           {ui push_screen tour_band_need_online_profile_screen})
                        ({platform_mgr is_player_a_guest $player_num}
                           {ui push_screen tour_band_guest_cannot_select_screen})
                        (TRUE
                           {tour set_remote_band}
                           {finding_panel set_joining_user $player}
                           {ui goto_screen finding_screen})})
                  ({[band_provider]
                        is_pos_band
                        $pos}
                     {if_else
                        {[band_provider]
                           is_band_local
                           $pos}
                        {do
                           {tour
                              set_band
                              {[band_provider]
                                 get_band
                                 $pos}}
                           {fx fade_out}
                           {ui
                              goto_screen
                              {gamemode get matchmaking_screen}}}
                        {cond
                           ({gamecfg is_missing_mic $player_num FALSE}
                              {vocalist_must_have_mic_screen set message solo_vocalist_needs_mic}
                              {ui push_screen vocalist_must_have_mic_screen})
                           ({!
                                 {platform_mgr player_has_online_privilege $player_num}}
                              {ui push_screen tour_band_need_online_profile_screen})
                           ({platform_mgr is_player_a_guest $player_num}
                              {ui push_screen tour_band_guest_cannot_select_screen})
                           (TRUE
                              {[band_provider]
                                 select_remote_band
                                 $pos}
                              {finding_panel set_joining_user $player}
                              {ui goto_screen finding_screen})}})
                  ({[band_provider]
                        is_pos_sign_in_instruction
                        $pos}
                     {platform_mgr signin 1})
                  (TRUE
                     {ui push_screen band_chooser_non_active_select_screen})}})})
   (JOYPAD_CONNECT_MSG
      {band.lst
         set_provider
         [band_provider]}
      {$this reset_list_position}
      {$this refresh_helpbar})
   (signin_changed
      {band.lst
         set_provider
         [band_provider]}
      {$this reset_list_position}
      {$this refresh_helpbar})
   (save_load_all_complete_msg
      {band.lst
         set_provider
         [band_provider]}
      {$this reset_list_position}
      {$this refresh_helpbar})
   (presence_info_received
      {band.lst set_dirty})}
{new
   AutoloadScreen
   tour_band_sel_screen
   (panels meta movie_panel tour_band_sel_panel tourworld_lower3rd_panel)
   (focus tour_band_sel_panel)
   (ignore_activated_button_press FALSE)
   (back main_screen)
   (enter
      {presence_mgr set_assembling_band}
      {char_cache cache_update})
   (exit
      {presence_mgr set_prepare_to_rock})}
{new
   BandScreen
   tour_band_need_online_profile_screen
   (panels dialog_panel)
   (focus dialog_panel)
   (enter
      {dialog_panel
         set_ok
         {localize tour_band_need_online_profile}})
   (SELECT_MSG
      {ui pop_screen})}
{new
