{new
   LoadingPanel
   loading_panel
   (file
      [loading_screen_file])
   (next_screen '')
   (loading_screen_file
      {$this choose_loading_screen})
   (load
      {if
         {content_mgr never_refreshed}
         {content_mgr start_refresh}}
      {$this initialize})
   (enter
      {if
         {==
            {ui_event_mgr current_event}
            pad_lost}
         {ui_event_mgr dismiss_event}}
      {if
         {$this exists show_skip.anim}
         {show_skip.anim set_frame 0}})
   (block_event
      ($event)
      {!= $event data_error})}
{new
   HamScreen
   loading_screen
   (panels loading_panel)
   (enter
      {ui goto_screen preloading_screen})}
{new
   PreloadPanel
   preload_panel
   (song_mgr song_mgr)
   (current_song
      {meta_performer song})
   (preload_files
      ({song_mgr
            song_file_path
            {meta_performer song}
            ".milo"}
         0
         0))
   (on_preload_ok
      {ui goto_screen real_loading_screen})}
{new
   HamScreen
   preloading_screen
   (panels loading_panel preload_panel)
   (focus preload_panel)}
{new
   HamScreen
   real_loading_screen
   (panels loading_panel)
   (focus loading_panel)
   (enter
      {song_mgr
         add_recent_song
         {meta_performer song}}
      {synth stop_all_sfx}
      {ui
         goto_screen
         {gamemode get game_screen}})}