{new
   HamPanel
   options_av_panel
   (file
      "options_av.milo")
   (start_controller_focus dolby.btn)
   (show_back_button 1)
   (enter)
   (exit)
   (SELECT_MSG
      {switch
         $component
         (dolby.btn
            {profile_mgr
               set_dolby
               {!
                  {profile_mgr get_dolby}}}
            {$this update_checks})
         (overscan.btn
            {profile_mgr
               set_overscan
               {!
                  {profile_mgr get_overscan}}}
            {$this update_checks})
         (crowd_volume.btn
            {ui goto_screen crowd_volume_screen})
         (effects_volume.btn
            {ui goto_screen effects_volume_screen})
         (back.btn
            {ui
               go_back_screen
               {{ui current_screen}
                  get
                  back}})})
   (FOCUS_MSG
      {$this update_description $new_focus})
   (HIGHLIGHT_CHANGED_MSG
      {$this update_description $component})
   (update_checks
      {dolby_check.lbl
         set_checked
         {profile_mgr get_dolby}}
      {overscan_check.lbl
         set_checked
         {profile_mgr get_overscan}})
   (update_description
      ($component)
      {switch
         $component
         (dolby.btn
            {description.lbl set text_token dolby_description})
         (overscan.btn
            {description.lbl set text_token overscan_description})
         (crowd_volume.btn
            {description.lbl
               set
               text_token
               ""})
         (effects_volume.btn
            {description.lbl
               set
               text_token
               ""})})}
{new
   HamScreen
   options_av_screen
   (panels meta background_panel options_av_panel)
   (focus options_av_panel)
   (back options_screen)}
{new
   HamPanel
   options_volume_panel
   (file
      "options_volume.milo")
   (start_controller_focus 0.btn)
   (show_back_button 1)
   (enter
      {right_hand.hbs set disable_select_sound 1}
      {$this update_checks})
   (exit)
   (SELECT_MSG
      {switch
         $component
         (0.btn
            {{ui current_screen}
               set_volume
               0}
            {{ui current_screen}
               play_preview_sound})
         (1.btn
            {{ui current_screen}
               set_volume
               1}
            {{ui current_screen}
               play_preview_sound})
         (2.btn
            {{ui current_screen}
               set_volume
               2}
            {{ui current_screen}
               play_preview_sound})
         (3.btn
            {{ui current_screen}
               set_volume
               3}
            {{ui current_screen}
               play_preview_sound})
         (4.btn
            {{ui current_screen}
               set_volume
               4}
            {{ui current_screen}
               play_preview_sound})
         (5.btn
            {{ui current_screen}
               set_volume
               5}
            {{ui current_screen}
               play_preview_sound})
         (back.btn
            {ui
               go_back_screen
               {{ui current_screen}
                  get
                  back}})}
      {$this update_checks})
   (update_checks
      {do
         ($volume
            {{ui current_screen}
               get_volume})
         {check_00.lbl
            set
            showing
            {== 0 $volume}}
         {check_01.lbl
            set
            showing
            {== 1 $volume}}
         {check_02.lbl
            set
            showing
            {== 2 $volume}}
         {check_03.lbl
            set
            showing
            {== 3 $volume}}
         {check_04.lbl
            set
            showing
            {== 4 $volume}}
         {check_05.lbl
            set
            showing
            {== 5 $volume}}})}
{new
   HamScreen
   crowd_volume_screen
   (panels meta background_panel options_volume_panel)
   (focus options_volume_panel)
   (back options_av_screen)
   (set_volume
      ($value)
      {profile_mgr set_crowd_volume $value})
   (get_volume
      {profile_mgr get_crowd_volume})
   (play_preview_sound
      {{options_volume_panel find crowd_sample.trig}
         trigger})}
{new
   HamScreen
   effects_volume_screen
   (panels meta background_panel options_volume_panel)
   (focus options_volume_panel)
   (back options_av_screen)
   (set_volume
      ($value)
      {profile_mgr set_fx_volume $value})
   (get_volume
      {profile_mgr get_fx_volume})
   (play_preview_sound
      {{options_volume_panel find fx_sample.trig}
         trigger})}